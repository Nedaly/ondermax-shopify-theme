{% comment %} max-width:850px {% endcomment %}
<div class="steps-with-cta">
  {% if section.settings.heading != blank %}
      <h2 class="steps-with-cta__heading">
        {{ section.settings.heading }}
      </h2>
    {% endif %}
  
  
  
  <div class="steps-with-cta__grid">
    
      
  {% for block in section.blocks %}
        {% if block.type == 'step' %}
          <div class="steps-with-cta__step" {{ block.shopify_attributes }}>

          


            {% if block.settings.title != blank %}
              <h3 class="steps-with-cta__step-heading">
                  <div class="steps-with-cta__step-number">
              <span>{{ forloop.index }}</span>
            </div>
                {{ block.settings.title }}
              </h3>
            {% endif %}

            {% if block.settings.text != blank %}
              <div class="steps-with-cta__step-description">
                {{ block.settings.text }}
              </div>
            {% endif %}



            
            {% if block.settings.image != blank %}
              <div class="steps-with-cta__step-image">
                <img
                  src="{{ block.settings.image | img_url: 'master'  }}"
                 
                  
              
                  alt="{{ block.settings.title | escape }}"
                >
              </div>
            {% endif %}

          </div>
        {% endif %}
      {% endfor %}
      
       
      
    
      
       
      
    
  </div>
  
  
    <div class="steps-with-cta__cta-container">
      
      <div class="steps-with-cta__cta-wrapper">
        
          {% if section.settings.cta_icon != blank %}
            <div class="steps-with-cta__cta-icon">
              <img
                src="{{ section.settings.cta_icon | image_url: width: 80 }}"
                srcset="
                  {{ section.settings.cta_icon | image_url: width: 40 }} 40w,
                  {{ section.settings.cta_icon | image_url: width: 80 }} 80w
                "
                width="50"
                height="50"
                loading="lazy"
                alt="CTA icon"
              >
            </div>
          {% endif %}
        
        
        {% if section.settings.cta_heading != blank %}
            <h3 class="steps-with-cta__cta-heading">
              {{ section.settings.cta_heading }}
            </h3>
          {% endif %}
        
        
        
       {% if section.settings.cta_text != blank %}
            <div class="steps-with-cta__cta-description">
              {{ section.settings.cta_text }}
            </div>
          {% endif %}
        
      </div>
    </div>
  
</div>

 </div>



