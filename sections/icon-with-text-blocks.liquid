<div class="icon_with_text padding-{{ section.id }}" id="science-authority">
    <div class="page-width">
        <div class="heading">
            {%- if section.settings.show_badge -%}
                <div class="iwt_badge">
                    <span class="badge badge--{{ section.settings.badge_style }} {{ section.settings.badge_size }}">
                        {{ section.settings.badge_text | default: 'Science Backed' }}
                    </span>
                </div>
            {%- endif -%}
            <h2 class="iwt_heading">{{ section.settings.heading }}</h2>
            <p class="iwt_subheading">{{ section.settings.subheading }}</p>
            {%- if section.settings.show_stats -%}
                <div class="iwt_stats">
                    <div class="stat_item">
                        <span class="stat_number">{{ section.settings.stat_1_number | default: '10,000+' }}</span>
                        <span class="stat_label">{{ section.settings.stat_1_label | default: 'Happy Customers' }}</span>
                    </div>
                    <div class="stat_item">
                        <span class="stat_number">{{ section.settings.stat_2_number | default: '95%' }}</span>
                        <span class="stat_label">{{ section.settings.stat_2_label | default: 'Satisfaction Rate' }}</span>
                    </div>
                    <div class="stat_item">
                        <span class="stat_number">{{ section.settings.stat_3_number | default: '30' }}</span>
                        <span class="stat_label">{{ section.settings.stat_3_label | default: 'Day Guarantee' }}</span>
                    </div>
                </div>
            {%- endif -%}
        </div>
        <div class="icon_with_text_blocks">
            {% for block in section.blocks %}
                <div class="icon_with_text_block" data-aos="fade-up" data-aos-delay="{{ forloop.index0 | times: 100 }}">
                    <div class="iwt_icon">
                        {{ block.settings.svg }}
                        {% comment %} {{ block.settings.icon | image_url: width: 20 | image_tag  }} {% endcomment %}
                    </div>
                    <h1 class="iwt_title">{{ block.settings.title }}</h1>
                    <div class="iwt_desc">{{ block.settings.desc }}</div>
                    {%- if block.settings.show_benefit -%}
                        <div class="iwt_benefit">
                            <span class="benefit_text">{{ block.settings.benefit_text | default: 'Clinically Proven' }}</span>
                        </div>
                    {%- endif -%}
                </div>
            {% endfor %}
        </div>
    </div>
</div>

<style>
    .padding-{{ section.id }}{
        padding-top:{{ section.settings.p_top | times: 0.75 | round: 0 }}px;
        padding-bottom:{{ section.settings.p_bottom | times: 0.75 | round: 0 }}px;
    }

    .icon_with_text{
        background: {{ section.settings.bg_color }};
    }

    .icon_with_text .icon_with_text_blocks {
        display: flex;
        justify-content: center;
        gap: 3rem;
        margin-top: 5rem;
        flex-wrap: wrap;
    }

    .icon_with_text .iwt_heading {
        text-align: center;
        font-family: "Poppins", sans-serif;
        font-size: 60px;
        font-weight: 600;
        letter-spacing: -2.5px;
        color: #fff;
        margin: 0;
        line-height: 100%;
        text-transform: capitalize;
    }

    .icon_with_text .iwt_title {
        font-size: 22px;
        font-family: "Poppins", sans-serif;
        font-weight: bold;
        letter-spacing: 0;
        color: #fff;
        margin: 0;
        line-height: 100%;
        white-space: nowrap;
        margin-bottom: 16px;
        transition: 0.3s ease-in-out;
        margin-top: 20px;
    }

    .icon_with_text .icon_with_text_block {
       flex: 0 0 calc(33.333% - 2rem);
        text-align: center;
        padding: 30px 20px;
        border: 1px solid #303030;
        border-radius: 1rem;
        transition: all 0.3s ease-in-out;
        background: #262626;
        position: relative;
        &:hover{
            background: #313131;
                background: #313131;
                transform: scale(1.05) translateY(-10px);
                box-shadow: 0 0 6px 0px rgba(0, 144, 141, 0.8);
                border-color: transparent;
        }
        &:before{
            content: '';
            height: 100%;
            width: 100%;
            position: absolute;
            box-shadow: inset 0 0 20px 20px rgb(0 144 141 / 5%);
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            border-radius: 1rem;
            opacity: 0;
            transition: all 0.3s ease-in-out;
        }
    }

    .icon_with_text .icon_with_text_block:hover:before{
        opacity: 1;
    }

    .icon_with_text .iwt_icon {
        background: #464646;
        width: fit-content;
        padding: 10px 12px;
        border-radius: 1rem;
        margin: 0 auto;
        border: 0.5px solid #ffffff26;
        position: relative;
        &:before{
            content: '';
            height: 100%;
            width: 100%;
            position: absolute;
            box-shadow: inset 0 0 20px 20px rgb(0 144 141 / 24%);
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            border-radius: 1rem;
            opacity: 0;
            transition: all 0.3s ease-in-out;
        }
        &:after{
            content: '';
            height: 100%;
            width: 100%;
            position: absolute;
            box-shadow: 0 0 20px 6px rgb(0 144 141 / 24%);
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            border-radius: 1rem;
            opacity: 0;
            transition: all 0.3s ease-in-out;
        }
    }

    .icon_with_text .iwt_icon svg {
        width: 100%;
        height: 100%;
        max-width: 30px;
        display: flex;
        aspect-ratio: 1;
        transition: 0.3s ease-in-out;
    }

    .icon_with_text .icon_with_text_block:hover .iwt_title{
        color: #00908d;
    }

    .icon_with_text .icon_with_text_block:hover .iwt_icon svg path{
        stroke: #00908d;
    }

    .icon_with_text .icon_with_text_block:hover .iwt_icon:before, .icon_with_text .icon_with_text_block:hover .iwt_icon:after{
        opacity: 1;
    }

    .icon_with_text .iwt_desc > * {
        color: #cfcfcf;
        font-family: poppins;
        font-size: 14px;
        letter-spacing: 0;
        margin: 0;
        line-height: 1.6;
        font-weight: 600;
    }

    .icon_with_text .iwt_subheading {
        color: lightgray;
        font-family: 'Poppins';
        font-size: 25px;
        text-align: center;
        letter-spacing: 0;
        margin: 0 auto;
        line-height: 1.6;
        max-width: 50%;
        margin-block: 2rem;
    }

    /* CRO Enhancements */
    .iwt_badge {
        text-align: center;
        margin-bottom: 20px;
    }

    .iwt_stats {
        display: flex;
        justify-content: center;
        gap: 3rem;
        margin-top: 2rem;
        flex-wrap: wrap;
    }

    .stat_item {
        text-align: center;
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    .stat_number {
        font-family: 'Poppins', sans-serif;
        font-size: 32px;
        font-weight: 700;
        color: #00908d;
        line-height: 1;
        margin-bottom: 8px;
    }

    .stat_label {
        font-family: 'Poppins', sans-serif;
        font-size: 14px;
        color: #cfcfcf;
        font-weight: 500;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .iwt_benefit {
        margin-top: 12px;
        text-align: center;
    }

    .benefit_text {
        font-family: 'Poppins', sans-serif;
        font-size: 12px;
        color: #00908d;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        padding: 4px 8px;
        border: 1px solid #00908d;
        border-radius: 12px;
        background: rgba(0, 144, 141, 0.1);
    }
    @media screen and (max-width: 989px){
    .icon_with_text .icon_with_text_block {
        flex: 0 0 calc(50% - 2rem); 
        max-width: calc(50% - 2rem);
    }
}

@media screen and (max-width: 768px){
    .icon_with_text .icon_with_text_blocks {
        flex-wrap: wrap;
        margin-top: 3rem;
    }
    .icon_with_text .icon_with_text_block {
        flex: 0 0 calc(100% - 2rem); 
        max-width: calc(100% - 2rem);
    }
    .icon_with_text .iwt_title {
        font-size: 20px;
    }

    .icon_with_text .iwt_desc > * {
        font-size: 16px;
    }

    .icon_with_text .iwt_heading {
        font-size: 30px;
        letter-spacing: normal;
        margin-bottom: 30px;
    }

    .icon_with_text .iwt_subheading{
        font-size: 16px;
        max-width: 100%;
    }
    .padding-{{ section.id }}{
        padding-top: 40px !important;
        padding-bottom: 40px !important;
    }

    /* Mobile CRO Enhancements */
    .iwt_stats {
        gap: 1.5rem;
        margin-top: 1.5rem;
    }

    .stat_number {
        font-size: 24px;
    }

    .stat_label {
        font-size: 12px;
    }
}

@media screen and (min-width: 769px) and (max-width: 989px){

    .icon_with_text .icon_with_text_blocks {
        flex-wrap: wrap;
    }

    .icon_with_text .iwt_title {
        font-size: 25px;
    }

    .icon_with_text .iwt_desc > * {
        font-size: 20px;
    }

    .icon_with_text .iwt_heading {
        font-size: 40px;
        margin-bottom: 30px;
    }

    .icon_with_text .iwt_subheading{
        font-size: 20px;
        max-width: 100%;
    }
}

    @media screen and (min-width: 750px){
        .padding-{{ section.id }}{
            padding-top:{{ section.settings.p_top }}px;
            padding-bottom:{{ section.settings.p_bottom }}px;
        }
    }
</style>

{% schema %}
    {
        "name": "Icon with text",
        "settings": [
            {
                "type": "text",
                "id": "heading",
                "label": "Heading"
            },
            {
                "type": "text",
                "id": "subheading",
                "label": "Subheading"
            },
            {
                "type": "color",
                "id": "bg_color",
                "label": "Background color"
            },
            {
                "type": "header",
                "content": "CRO Enhancements"
            },
            {
                "type": "checkbox",
                "id": "show_badge",
                "label": "Show badge",
                "default": false
            },
            {
                "type": "text",
                "id": "badge_text",
                "label": "Badge text",
                "default": "Science Backed"
            },
            {
                "type": "select",
                "id": "badge_style",
                "label": "Badge style",
                "options": [
                    {"value": "primary", "label": "Primary"},
                    {"value": "secondary", "label": "Secondary"},
                    {"value": "success", "label": "Success"},
                    {"value": "warning", "label": "Warning"}
                ],
                "default": "primary"
            },
            {
                "type": "select",
                "id": "badge_size",
                "label": "Badge size",
                "options": [
                    {"value": "badge--small", "label": "Small"},
                    {"value": "badge--medium", "label": "Medium"},
                    {"value": "badge--large", "label": "Large"}
                ],
                "default": "badge--medium"
            },
            {
                "type": "checkbox",
                "id": "show_stats",
                "label": "Show statistics",
                "default": false
            },
            {
                "type": "text",
                "id": "stat_1_number",
                "label": "Stat 1 Number",
                "default": "10,000+"
            },
            {
                "type": "text",
                "id": "stat_1_label",
                "label": "Stat 1 Label",
                "default": "Happy Customers"
            },
            {
                "type": "text",
                "id": "stat_2_number",
                "label": "Stat 2 Number",
                "default": "95%"
            },
            {
                "type": "text",
                "id": "stat_2_label",
                "label": "Stat 2 Label",
                "default": "Satisfaction Rate"
            },
            {
                "type": "text",
                "id": "stat_3_number",
                "label": "Stat 3 Number",
                "default": "30"
            },
            {
                "type": "text",
                "id": "stat_3_label",
                "label": "Stat 3 Label",
                "default": "Day Guarantee"
            },
            {
                "type": "header",
                "content": "Layout"
            },
            {
                "type": "range",
                "id": "p_top",
                "min": 0,
                "max": 100,
                "step": 5,
                "unit": "px",
                "default": 0,
                "label": "Padding top"
            },
            {
                "type": "range",
                "id": "p_bottom",
                "min": 0,
                "max": 100,
                "step": 5,
                "unit": "px",
                "default": 0,
                "label": "Padding bottom"
            }
        ],
        "blocks": [
            {
                "type": "text",
                "name": "Add block",
                "settings": [
                    {
                        "type": "textarea",
                        "id": "svg",
                        "label": "Svg code"
                    },
                    {
                        "type": "text",
                        "id": "title",
                        "label": "Title"
                    },
                    {
                        "type": "richtext",
                        "id": "desc",
                        "label": "Description"
                    },
                    {
                        "type": "checkbox",
                        "id": "show_benefit",
                        "label": "Show benefit badge",
                        "default": false
                    },
                    {
                        "type": "text",
                        "id": "benefit_text",
                        "label": "Benefit text",
                        "default": "Clinically Proven"
                    }
                ]
            }
        ],
        "presets":[
            {
                "name": "Icon with text"
            }
        ]
    }   
{% endschema %}