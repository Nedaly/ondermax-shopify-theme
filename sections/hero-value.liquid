{{ 'section-hero-value.css' | asset_url | stylesheet_tag }}

<div class="hero-value color-{{ section.settings.color_scheme }} gradient">
  <div class="hero-value__wrapper page-width">
    <div class="hero-value__content">
      {%- if section.settings.heading != blank -%}
        <h1 class="hero-value__heading h1">
          {{ section.settings.heading }}
        </h1>
      {%- endif -%}
      
      {%- if section.settings.subheading != blank -%}
        <p class="hero-value__subheading">
          {{ section.settings.subheading }}
        </p>
      {%- endif -%}
      
      {%- if section.settings.button_label != blank -%}
        <div class="hero-value__button-wrapper">
          <a
            href="{{ section.settings.button_link }}"
            class="button button--primary hero-value__button"
            {% if section.settings.button_link == blank %}
              role="link" aria-disabled="true"
            {% endif %}
          >
            {{ section.settings.button_label | escape }}
          </a>
        </div>
      {%- endif -%}
    </div>
    
    {%- if section.settings.image != blank -%}
      <div class="hero-value__media">
        <div class="hero-value__image-wrapper">
          {%- liquid
            assign image_height = section.settings.image.width | divided_by: section.settings.image.aspect_ratio
            if section.settings.image_2 != blank
              assign image_class = "hero-value__image hero-value__image--primary"
            else
              assign image_class = "hero-value__image"
            endif
          -%}
          {{
            section.settings.image
            | image_url: width: 1946
            | image_tag:
              loading: 'lazy',
              width: section.settings.image.width,
              height: image_height,
              class: image_class,
              sizes: '(min-width: 750px) calc(100vw - 120px), (min-width: 990px) calc(100vw - 120px), calc(100vw - 40px)',
              widths: '375, 550, 750, 1100, 1500, 1780, 2000, 3000, 3840',
              alt: section.settings.image.alt | escape
          }}
        </div>
      </div>
    {%- endif -%}
  </div>
  
  {%- if section.settings.show_social_proof -%}
    <div class="hero-value__social-proof">
      {% render 'social-proof', section: section %}
    </div>
  {%- endif -%}
</div>

{% schema %}
{
  "name": "Hero Value Proposition",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "inline_richtext",
      "id": "heading",
      "default": "Your Value Proposition",
      "label": "Heading"
    },
    {
      "type": "inline_richtext",
      "id": "subheading",
      "default": "Tell your customers why they should choose your product or service.",
      "label": "Subheading"
    },
    {
      "type": "text",
      "id": "button_label",
      "default": "Shop Now",
      "label": "Button label"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Hero image"
    },
    {
      "type": "checkbox",
      "id": "show_social_proof",
      "default": true,
      "label": "Show social proof"
    },
    {
      "type": "select",
      "id": "color_scheme",
      "options": [
        {
          "value": "accent-1",
          "label": "Accent 1"
        },
        {
          "value": "accent-2",
          "label": "Accent 2"
        },
        {
          "value": "background-1",
          "label": "Background 1"
        },
        {
          "value": "background-2",
          "label": "Background 2"
        },
        {
          "value": "inverse",
          "label": "Inverse"
        }
      ],
      "default": "background-1",
      "label": "Color scheme"
    },
    {
      "type": "header",
      "content": "Section padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top padding",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom padding",
      "default": 36
    }
  ],
  "presets": [
    {
      "name": "Hero Value Proposition"
    }
  ]
}
{% endschema %}
