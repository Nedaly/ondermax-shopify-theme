{{ 'hero-value.css' | asset_url | stylesheet_tag }}

<section class="hero-value">
  <div class="hero-inner">
    <h1>{{ section.settings.heading }}</h1>
    <p>{{ section.settings.subheading }}</p>
    <a href="{{ section.settings.cta_url }}" class="btn">{{ section.settings.cta_label }}</a>
  </div>
</section>

{% schema %}
{
  "name": "Hero Value Prop",
  "settings": [
    { "id": "heading", "type": "text", "label": "Heading", "default": "Your Value Proposition" },
    { "id": "subheading", "type": "text", "label": "Subheading", "default": "Short, persuasive subcopy." },
    { "id": "cta_label", "type": "text", "label": "CTA Label", "default": "Shop Now" },
    { "id": "cta_url", "type": "url", "label": "CTA URL" }
  ]
}
{% endschema %}