<script>


class StatisticsGrid {
  constructor(container) {
    this.container = container;

    if (!this.container) return;

    this.counters = this.container.querySelectorAll("[data-countup]");

    if (!this.counters.length) return;

    this.settings = {
      animationDuration: parseInt(this.container.getAttribute("data-animation-duration") || 2000),
      animationDelay: parseInt(this.container.getAttribute("data-animation-delay") || 100),
      enableScientificTheme: this.container.hasAttribute("data-scientific-theme"),
      accentColor: this.container.getAttribute("data-accent-color") || "#41b8ff",
      hasSpecialStyling: this.container.hasAttribute("data-special-styling"),
    };

    this.options = { root: null, rootMargin: "0px", threshold: 0.2 };
    this.animationStarted = false;

    this.init();
  }

  init() {
    this.container.style.setProperty("--accent-color", this.settings.accentColor);

    if ("IntersectionObserver" in window) {
      this.observer = new IntersectionObserver(this.onIntersection.bind(this), this.options);
      this.observer.observe(this.container);
    } else {
      this.animateCounters();
    }
  }

  onIntersection(entries) {
    entries.forEach((entry) => {
      if (entry.isIntersecting && !this.animationStarted) {
        this.animationStarted = true;
        this.animateCounters();
        this.observer.disconnect();
      }
    });
  }

  animateCounters() {
    this.counters.forEach((counter, index) => {
      setTimeout(() => {
        this.animateCounter(counter);
      }, index * this.settings.animationDelay);
    });
  }

  animateCounter(counter) {
    const rawValue = counter.getAttribute("data-countup-value");
    const isPercentage = rawValue.includes("%");
    const isDecimal = rawValue.includes(".");
    const hasCommas = rawValue.includes(",");

    let finalValue = parseFloat(rawValue.replace(/[^0-9.-]/g, ""));
    let prefix = "";
    let suffix = "";

    // Extract prefix & suffix
    if (rawValue.trim().charAt(0).match(/[^0-9.-]/)) {
      prefix = rawValue.trim().charAt(0);
    }
    if (isPercentage) {
      suffix = "%";
    } else if (rawValue.match(/[^0-9.%]+$/)) {
      suffix = rawValue.match(/[^0-9.%]+$/)[0];
    }

    const precision = isDecimal && rawValue.split(".")[1] 
      ? rawValue.split(".")[1].replace(/[^0-9]/g, "").length 
      : 0;

    const startTime = performance.now();

    if (this.settings.enableScientificTheme) {
      this.animateScientificCounter(counter, rawValue, finalValue, prefix, suffix, precision, hasCommas, startTime);
    } else {
      this.animateNormalCounter(counter, rawValue, finalValue, prefix, suffix, precision, hasCommas, startTime);
    }
  }

  animateScientificCounter(counter, rawValue, finalValue, prefix, suffix, precision, hasCommas, startTime) {
    const scientificWrapper = document.createElement("div");
    scientificWrapper.className = "scientific-counter-wrapper";

    const digitContainer = document.createElement("div");
    digitContainer.className = "scientific-counter";

    const gridLines = document.createElement("div");
    gridLines.className = "scientific-grid-lines";

    const cursorLine = document.createElement("div");
    cursorLine.className = "scientific-cursor-line";

    counter.innerHTML = "";
    counter.appendChild(scientificWrapper);
    scientificWrapper.appendChild(gridLines);
    scientificWrapper.appendChild(digitContainer);
    scientificWrapper.appendChild(cursorLine);

    const animate = (currentTime) => {
      const elapsedTime = currentTime - startTime;
      let progress = Math.min(elapsedTime / this.settings.animationDuration, 1);
      progress = this.easeOutExpo(progress);

      const currentValue = progress * finalValue;

      let formattedValue = prefix;
      formattedValue += precision > 0 ? currentValue.toFixed(precision) : Math.floor(currentValue).toString();
      if (hasCommas) formattedValue = this.addCommas(formattedValue);
      formattedValue += suffix;

      digitContainer.textContent = formattedValue;

      if (progress < 1) {
        requestAnimationFrame(animate);
      } else {
        cursorLine.classList.add("fade-out");
        digitContainer.textContent = rawValue;
      }
    };

    requestAnimationFrame(animate);
  }

  animateNormalCounter(counter, rawValue, finalValue, prefix, suffix, precision, hasCommas, startTime) {
    const animate = (currentTime) => {
      const elapsedTime = currentTime - startTime;
      let progress = Math.min(elapsedTime / this.settings.animationDuration, 1);
      progress = this.easeOutExpo(progress);

      const currentValue = progress * finalValue;

      let formattedValue = prefix;
      formattedValue += precision > 0 ? currentValue.toFixed(precision) : Math.floor(currentValue).toString();
      if (hasCommas) formattedValue = this.addCommas(formattedValue);
      formattedValue += suffix;

      counter.textContent = formattedValue;

      if (progress < 1) {
        requestAnimationFrame(animate);
      } else {
        counter.textContent = rawValue;
      }
    };

    requestAnimationFrame(animate);
  }

  easeOutExpo(x) {
    return x === 1 ? 1 : 1 - Math.pow(2, -10 * x);
  }

  addCommas(value) {
    const parts = value.toString().split(".");
    parts[0] = parts[0].replace(/\B(?=(\d{3})+(?!\d))/g, ",");
    return parts.join(".");
  }
}

// Initialize all grids on DOMContentLoaded
document.addEventListener("DOMContentLoaded", () => {
  document.querySelectorAll("[data-statistics-grid]").forEach((grid) => {
    new StatisticsGrid(grid);
  });
});



</script>




<div class="statistics-grid"
     style="
      background-image: url('{{ section.settings.background_image | image_url: width: 2000 }}');
      background-size: cover;
      background-position: center;
      background-attachment: fixed;
      padding-top: 60px;
      padding-bottom: 60px;
    ">

  {% if section.settings.video_url != blank %}
    <video playsinline autoplay loop muted preload="metadata" class="statistics-grid__video"
           poster="{{ section.settings.video_poster | image_url }}">
      <source src="{{ section.settings.video_url }}" type="video/mp4">
    </video>
  {% endif %}

  <div class="statistics-grid__overlay"
       style="opacity: {{ section.settings.overlay_opacity }}; background-color: {{ section.settings.overlay_color }};">
  </div>

  <div class="statistics-grid__inner page-width">
    <div class="statistics-grid__half-layout">

      <!-- RIGHT CONTENT -->
      <div class="statistics-grid__right-column">
        <div class="statistics-grid__content-wrapper">

          <h2 class="statistics-grid__heading">{{ section.settings.heading }}</h2>

          <div class="statistics-grid__main-description">
            {{ section.settings.main_text }}
          </div>

          {% if section.settings.button_label != blank %}
          <div class="statistics-grid__button-container">
            <a href="{{ section.settings.button_link }}" class="statistics-grid__button button">
              {{ section.settings.button_label }}
            </a>
          </div>
          {% endif %}
        </div>
      </div>

      <!-- LEFT STATISTICS GRID -->
      <div class="statistics-grid__left-column">
        <div class="statistics-grid__2x2-grid">

          {% for block in section.blocks %}
            <div class="statistics-grid__column">
              <div class="statistics-grid__subheading">
                <h3>{{ block.settings.subheading }}</h3>
              </div>

              <div class="statistics-grid__stat">
                <h3 data-countup data-countup-value="{{ block.settings.stat_value }}">
                  {{ block.settings.stat_value }}
                </h3>
              </div>

              <div class="statistics-grid__content">
                <div class="statistics-grid__description rte">
                  {{ block.settings.description }}
                </div>
              </div>
            </div>
          {% endfor %}

        </div>
      </div>

      <div class="statistics-grid__source-note">
        <p>{{ section.settings.source_note }}</p>
      </div>

    </div>
  </div>

</div>





