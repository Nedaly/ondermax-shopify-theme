    // Get all popup buttons, popups, and close buttons
    const openButtons = document.querySelectorAll('.scientific-experts__open-popup-btn');
    const popups = document.querySelectorAll('.scientific-experts__popup');
    const closeButtons = document.querySelectorAll('.scientific-experts__popup-close');
    const overlays = document.querySelectorAll('.scientific-experts__popup-overlay');
    
    // Store scroll position globally to avoid conflicts
    let storedScrollTop = 0;
    let storedScrollLeft = 0;
    
    // Function to open popup
    function openPopup(popupId) {
      const popup = document.getElementById(popupId);
      if (!popup) return;
      
      // Store current scroll position (only needed for desktop focus restoration)
      storedScrollTop = window.pageYOffset || document.documentElement.scrollTop;
      storedScrollLeft = window.pageXOffset || document.documentElement.scrollLeft;
      
      // Move popup to body to ensure proper stacking
      if (popup.parentNode !== document.body) {
        document.body.appendChild(popup);
      }
      
      // Simple body scroll lock - no position manipulation needed
      document.body.style.overflow = 'hidden';
      
      // Set popup to visible state
      popup.setAttribute('aria-hidden', 'false');
      popup.style.display = 'flex';
      
      // Smooth fade in
      requestAnimationFrame(() => {
        popup.classList.add('active');
      });
      
      // Set focus after animation (desktop only)
      const isMobile = window.innerWidth <= 768 || 'ontouchstart' in window;
      if (!isMobile) {
        setTimeout(() => {
          const closeBtn = popup.querySelector('.scientific-experts__popup-close');
          if (closeBtn) {
            closeBtn.focus({ preventScroll: true });
          }
        }, 350);
      }
    }
    
    // Enhanced close function with mobile-optimized fade
    function closePopup(popup) {
      if (!popup) return;
      
      const isMobile = window.innerWidth <= 768 || 'ontouchstart' in window;
      
      if (isMobile) {
        // MOBILE: Simple fade with no scroll restoration
        popup.style.pointerEvents = 'none';
        popup.style.transition = 'opacity 0.35s cubic-bezier(0.25, 0.46, 0.45, 0.94)';
        popup.style.opacity = '0';
        popup.setAttribute('aria-hidden', 'true');
        
        setTimeout(() => {
          // Simple cleanup - no position restoration needed
          popup.style.display = 'none';
          popup.classList.remove('active');
          document.body.style.overflow = '';
          
          // Clean up popup styles
          popup.style.opacity = '';
          popup.style.transition = '';
          popup.style.pointerEvents = '';
        }, 350);
        
      } else {
        // DESKTOP: Standard approach with focus restoration
        popup.classList.remove('active');
        popup.setAttribute('aria-hidden', 'true');
        
        setTimeout(() => {
          document.body.style.overflow = '';
          popup.style.display = 'none';
          
          const expertId = popup.id.replace('popup-', '');
          const openBtn = document.querySelector(`.scientific-experts__open-popup-btn[data-expert-id="${expertId}"]`);
          if (openBtn) {
            setTimeout(() => {
              openBtn.focus({ preventScroll: true });
            }, 50);
          }
        }, 300);
      }
    }
    
    // Prevent rapid clicking issues
    let clickCooldown = false;
    
    // Event listeners
    openButtons.forEach(button => {
      button.addEventListener('click', function(e) {
        e.preventDefault();
        e.stopPropagation();
        
        // Prevent rapid clicking that can cause issues
        if (clickCooldown) return;
        clickCooldown = true;
        setTimeout(() => clickCooldown = false, 500);
        
        const expertId = this.getAttribute('data-expert-id');
        openPopup('popup-' + expertId);
      });
    });
    
    closeButtons.forEach(button => {
      button.addEventListener('click', function() {
        const popup = this.closest('.scientific-experts__popup');
        closePopup(popup);
      });
    });
    
    overlays.forEach(overlay => {
      overlay.addEventListener('click', function() {
        const popup = this.closest('.scientific-experts__popup');
        closePopup(popup);
      });
    });
    
    // Close on Escape key
    document.addEventListener('keydown', function(e) {
      if (e.key === 'Escape') {
        const activePopup = document.querySelector('.scientific-experts__popup.active');
        if (activePopup) {
          closePopup(activePopup);
        }
      }
    });
    
    // Focus trap
    popups.forEach(popup => {
      popup.addEventListener('keydown', function(e) {
        if (e.key === 'Tab') {
          const focusableElements = popup.querySelectorAll('button, [href], input, select, textarea, [tabindex]:not([tabindex="-1"])');
          const firstElement = focusableElements[0];
          const lastElement = focusableElements[focusableElements.length - 1];
          
          if (e.shiftKey && document.activeElement === firstElement) {
            e.preventDefault();
            lastElement.focus();
          } else if (!e.shiftKey && document.activeElement === lastElement) {
            e.preventDefault();
            firstElement.focus();
          }
        }
      });
    });
  });
