                    {% endif %}
                  </div>
                  <div class="hero-banner-grid__bullet-title">
                    {{ block.settings.text }}
                  </div>
                </div>
              {% endfor %}
            </div>
          {% endif %}

        </div>
      </div>

    </div>
  </div>
</section>
 
 


<script>
  document.addEventListener('DOMContentLoaded', function() {
    const viewport = document.querySelector('.italic-text-slider-viewport');
    if (!viewport) return;

    const reel = viewport.querySelector('.italic-text-slider-reel');
    const items = reel.querySelectorAll('.italic-text-slider-item');
    
    if (!reel || !items || items.length === 0) {
      if(viewport) viewport.classList.add('italic-text-slider-viewport--visible');
      return;
    }

    let sliderInterval = null;
    let lastWidth = window.innerWidth;
    let resizeTimeout = null; // For debouncing resize
    
    function updateViewportWidth() {
      if (!items.length || !viewport) return;
      
      items.forEach(item => {
        item.style.width = ''; 
      });
      
      let maxWidthBasedOnText = 0;
      items.forEach(item => {
        const itemWidth = item.scrollWidth;
        maxWidthBasedOnText = Math.max(maxWidthBasedOnText, itemWidth);
      });
      
      const desiredTextWidth = Math.max(maxWidthBasedOnText + 15, 100); // Buffer for text

      let finalWidth;
      const isDesktop = window.innerWidth >= 750;
      // Respect CSS min-width, adjust default based on view. These are fallbacks if getComputedStyle fails or returns 0.
      const cssViewportMinWidthFallback = isDesktop ? 150 : 200;
      const cssViewportMinWidth = parseFloat(window.getComputedStyle(viewport).minWidth) || cssViewportMinWidthFallback;

      if (isDesktop) {
        let constraintContainer = viewport.closest('.hero-banner-grid__content-inner') || viewport.closest('.hero-banner-grid__content');
        // Generous constraint for desktop, fallback to a large portion of window width if container not found.
        let desktopConstraintWidth = window.innerWidth * 0.7; 
        
        if (constraintContainer) {
            desktopConstraintWidth = constraintContainer.offsetWidth * 0.98; // Allow up to 98% of content area
        }
        // Prioritize desiredTextWidth unless it exceeds the generous desktopConstraintWidth.
        finalWidth = Math.min(desiredTextWidth, desktopConstraintWidth);
        finalWidth = Math.max(finalWidth, cssViewportMinWidth); // Ensure it respects the (potentially larger) CSS min-width.

      } else { // Mobile
        let constraintContainer = viewport.closest('.hero-banner-grid__content-inner') || viewport.closest('.hero-banner-grid__content');
        let mobileConstraintWidth = window.innerWidth * 0.9; 

        if (constraintContainer) {
          mobileConstraintWidth = constraintContainer.offsetWidth * 0.95; 
        }
        
        finalWidth = Math.min(desiredTextWidth, mobileConstraintWidth);
        finalWidth = Math.max(finalWidth, cssViewportMinWidth);
      }

      viewport.style.width = `${finalWidth}px`;
      items.forEach(item => {
        item.style.width = `${finalWidth}px`;
      });
    }
    
    function initializeSlider() {
      if (sliderInterval) {
        clearInterval(sliderInterval);
        sliderInterval = null;
      }
      if (reel) {
        reel.style.transition = 'none';
        reel.style.transform = 'translateY(0px)';
        reel.offsetHeight; 
      }

      let actualUniqueItemsInReel = items.length;
      if (items.length > 1 && items[0].textContent === items[items.length - 1].textContent) {
          actualUniqueItemsInReel = items.length - 1; 
      }

      updateViewportWidth();
      
      if (actualUniqueItemsInReel <= 1) {
        if (items.length > 0) {
          const staticItem = items[0];
          staticItem.style.height = ''; 
          viewport.style.height = '';
          
          setTimeout(() => {
            let staticItemHeight = staticItem.offsetHeight;
            if (staticItemHeight <= 1) { 
                const isMobile = window.innerWidth < 750;
                const isSmallMobile = window.innerWidth < 375;
                let emFallback = isSmallMobile ? '1.4em' : (isMobile ? '1.3em' : '1.2em');
                viewport.style.height = emFallback;
                staticItem.style.height = emFallback;
            } else {
                viewport.style.height = `${staticItemHeight}px`;
                staticItem.style.height = `${staticItemHeight}px`;
            }
            viewport.classList.add('italic-text-slider-viewport--visible');
          }, 75);
        } else {
          viewport.classList.add('italic-text-slider-viewport--visible');
        }
        return;
      }

      let currentIndex = 0;
      
      items.forEach(item => item.style.height = '');
      if(reel) reel.style.height = '';
      viewport.style.height = '';
      
      setTimeout(() => {
        const itemElementForSizing = items[0];
        let itemHeight = itemElementForSizing.offsetHeight;

        if (itemHeight <= 1) { 
            const isMobileView = window.innerWidth < 750;
            const isSmallMobileView = window.innerWidth < 375;
            let emFactor = 1.2;
            if (isSmallMobileView) emFactor = 1.4;
            else if (isMobileView) emFactor = 1.3;

            let parentH1 = viewport.closest('h1');
            let parentElementForFontSize = parentH1 || viewport; // Fallback to viewport itself if h1 not found
            let parentFontSize = parseFloat(window.getComputedStyle(parentElementForFontSize).fontSize);
            
            if (isNaN(parentFontSize) || parentFontSize === 0) parentFontSize = 16; 
            
            itemHeight = parentFontSize * emFactor;

            if (itemHeight <= 1) { 
                console.warn('Hero Banner Slider: Fallback could not determine item height. Using em directly.');
                const fallbackEmHeight = isSmallMobileView ? '1.4em' : (isMobileView ? '1.3em' : '1.2em');
                viewport.style.height = fallbackEmHeight;
                items.forEach(item => item.style.height = fallbackEmHeight);
            }
        }

        if (itemHeight <= 1 && actualUniqueItemsInReel > 1) { 
            viewport.classList.add('italic-text-slider-viewport--visible');
            console.error("Hero Banner Slider: Cannot initialize animation due to zero item height after fallback.");
            return; 
        }
        
        const totalUniqueItemsForLoop = actualUniqueItemsInReel;
        const animationDelay = 3000;
        const transitionDurationMs = 800;

        if(reel) reel.style.height = `${itemHeight * items.length}px`;
        viewport.style.height = `${itemHeight}px`;
        items.forEach(item => item.style.height = `${itemHeight}px`);
        
        if (reel) {
            reel.style.transition = `transform 1.2s cubic-bezier(0.23, 1, 0.32, 1)`;
        }
        
        // Initialize premium state system
        updateItemStates();

        function updateItemStates() {
          // Remove all state classes first
          items.forEach(item => {
            item.classList.remove('active', 'entering', 'exiting');
          });
          
          // Set states for premium fade transition
          const currentItem = items[currentIndex];
          const nextIndex = (currentIndex + 1) % totalUniqueItemsForLoop;
          const nextItem = items[nextIndex];
          const prevIndex = currentIndex === 0 ? totalUniqueItemsForLoop - 1 : currentIndex - 1;
          const prevItem = items[prevIndex];
          
          // Set current item as active
          if (currentItem) currentItem.classList.add('active');
          
          // Set next item as entering (for pre-loading the transition)
          if (nextItem && nextItem !== currentItem) nextItem.classList.add('entering');
          
          // Set previous item as exiting (in case of overlap)
          if (prevItem && prevItem !== currentItem) prevItem.classList.add('exiting');
          
          // Set all other items to default entering state
          items.forEach((item, index) => {
            if (index !== currentIndex && index !== nextIndex && index !== prevIndex) {
              item.classList.add('entering');
            }
          });
        }

        function showNextItem() {
          // Start transition by setting exiting state for current item
          const currentItem = items[currentIndex];
          if (currentItem) {
            currentItem.classList.remove('active');
            currentItem.classList.add('exiting');
          }
          
          currentIndex++;
          
          // Check if we need to reset BEFORE starting the animation
          if (currentIndex >= totalUniqueItemsForLoop) {
            // Handle loop reset with SAME animation as normal slides
            setTimeout(() => {
              if(reel) {
                // Reset reel position instantly (invisible to user)
                reel.style.transition = 'none';
                currentIndex = 0;
                reel.style.transform = `translateY(0px)`;
                reel.offsetHeight;
                reel.style.transition = `transform 1.2s cubic-bezier(0.23, 1, 0.32, 1)`;
                
                // Set all items to proper states for animation
                items.forEach(item => {
                  item.classList.remove('active', 'entering', 'exiting');
                });
                
                // Set first item to entering state (not active!)
                const firstItem = items[0];
                if (firstItem) {
                  firstItem.classList.add('entering');
                }
                
                // Set other items to entering
                items.forEach((item, index) => {
                  if (index > 0) {
                    item.classList.add('entering');
                  }
                });
                
                // Now animate first item from entering → active (SAME as normal slides)
                setTimeout(() => {
                  if (firstItem) {
                    firstItem.classList.remove('entering');
                    firstItem.classList.add('active');
                  }
                  
                  // Update states for next transition
                  setTimeout(() => {
                    updateItemStates();
                  }, 200);
                }, 150); // Same stagger timing as normal slides
              }
            }, 300);
          } else {
            // Normal animation logic only when NOT resetting
            setTimeout(() => {
              const newCurrentItem = items[currentIndex % items.length];
              if (newCurrentItem) {
                newCurrentItem.classList.remove('entering');
                newCurrentItem.classList.add('active');
              }
              
              // Update reel position with enhanced easing
              if(reel) reel.style.transform = `translateY(-${currentIndex * itemHeight}px)`;
              
              // Update all item states for next transition
              setTimeout(() => {
                updateItemStates();
              }, 200);
            }, 150); // Stagger the incoming animation
          }
        }

        if (totalUniqueItemsForLoop > 1) {
          sliderInterval = setInterval(showNextItem, animationDelay);
        }
        viewport.classList.add('italic-text-slider-viewport--visible');
      }, 75);
    }
    
    function handleResize() {
      const currentWidth = window.innerWidth;
      const widthChangedSignificantly = Math.abs(lastWidth - currentWidth) > 10; // Slightly more sensitive
      const breakpointCrossed = 
        (lastWidth < 750 && currentWidth >= 750) || 
        (lastWidth >= 750 && currentWidth < 750) ||
        (lastWidth < 375 && currentWidth >= 375) ||
        (lastWidth >= 375 && currentWidth < 375);
        
      if (widthChangedSignificantly || breakpointCrossed) {
        lastWidth = currentWidth;
        
        if (sliderInterval) {
          clearInterval(sliderInterval);
          sliderInterval = null;
        }
        if (reel) {
          reel.style.transition = 'none'; 
          reel.style.transform = 'translateY(0px)'; 
          reel.offsetHeight; 
        }

        clearTimeout(resizeTimeout);
        resizeTimeout = setTimeout(() => {
            initializeSlider(); 
        }, 150); // Debounce initialization by 150ms
      }
    }
    
    setTimeout(() => {
      initializeSlider();
    }, 150);
    
    window.addEventListener('resize', handleResize);
  });
