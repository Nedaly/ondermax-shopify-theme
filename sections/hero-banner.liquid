<style>
    .hero-banner-grid {
    overflow: hidden;
    position: relative;
    min-height: 500px;
    background-color: #FFFFFF; /* Set main background to white */
}

.hero-banner-grid::before,
.hero-banner-grid::after {
    content: '';
    position: absolute;
    border-radius: 50% 60% 40% 70% / 70% 50% 60% 30%; /* Base organic shape */
    opacity: 0.55; 
    filter: blur(45px); 
    z-index: 0; 
    will-change: transform, opacity, border-radius;
}

/* Secondary, complementary blob */
.hero-banner-grid::before { 
    width: 60vmax; 
    height: 60vmax;
    top: -10%; 
    left: -20%; /* Starts more top-left, less aggressive */
   background: radial-gradient(ellipse at center, #E8F3FF 50%, #D4E8FF 100%);
    animation: morphBlobBefore 28s infinite linear alternate;
    animation-delay: -2s; /* Offset animation */
}

/* Primary blob - starts bottom-right and expands */
.hero-banner-grid::after { 
    width: 50vmax; /* Starts smaller */
    height: 50vmax; /* Starts smaller */
    bottom: -25%; /* Positioned clearly in bottom-right */
    right: -25%; 
   background: radial-gradient(ellipse at center, #E8F3FF 50%, #D4E8FF 100%);
    animation: morphBlobAfterExpand 25s infinite ease-in-out alternate; 
}

@keyframes morphBlobBefore { /* Animation for the secondary blob */
    0% {
        transform: translate(0, 0) rotate(0deg) scale(0.9);
        border-radius: 50% 60% 40% 70% / 70% 50% 60% 30%;
        opacity: 0.5;
    }
    50% {
        transform: translate(10vmin, 5vmin) rotate(150deg) scale(1.1);
        border-radius: 60% 40% 70% 50% / 50% 70% 40% 60%;
        opacity: 0.65;
    }
    100% {
        transform: translate(-5vmin, -10vmin) rotate(330deg) scale(0.9);
        border-radius: 50% 60% 40% 70% / 70% 50% 60% 30%;
        opacity: 0.5;
    }
}

@keyframes morphBlobAfterExpand { /* Animation for the primary, expanding blob */
    0% {
        transform: translate(0, 0) rotate(0deg) scale(0.6); /* Starts small */
        border-radius: 70% 30% 60% 40% / 60% 40% 70% 30%;
        opacity: 0.6;
    }
    50% {
        transform: translate(-35vmin, -30vmin) rotate(-160deg) scale(2.2); /* Expands significantly and moves up-left */
        border-radius: 40% 60% 30% 70% / 30% 70% 40% 60%;
        opacity: 0.75;
    }
    100% {
        transform: translate(-10vmin, -5vmin) rotate(-340deg) scale(0.8); /* Recedes slightly, different end point */
        border-radius: 70% 30% 60% 40% / 60% 40% 70% 30%;
        opacity: 0.6;
    }
}

