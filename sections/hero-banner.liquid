    background-image: url('{{ section.settings.hero_image | image_url: width: 1500 }}');
    background-size: 100%;
    background-position: inherit;
  "
  fetchpriority="high">
        <div class="hero-banner-grid__image">
          <picture style="display:none;">
            <source
              media="(max-width: 749px)"
              srcset="{{ section.settings.hero_image | image_url: width: 375 }} 375w,
                      {{ section.settings.hero_image | image_url: width: 550 }} 550w,
                      {{ section.settings.hero_image | image_url: width: 750 }} 750w"
              sizes="100vw">

            <source
              media="(min-width: 750px)"
              srcset="{{ section.settings.hero_image | image_url: width: 550 }} 550w,
                      {{ section.settings.hero_image | image_url: width: 720 }} 720w,
                      {{ section.settings.hero_image | image_url: width: 990 }} 990w,
                      {{ section.settings.hero_image | image_url: width: 1100 }} 1100w,
                      {{ section.settings.hero_image | image_url: width: 1500 }} 1500w"
              sizes="(min-width: 990px) 50vw, 100vw">

            <img
              src="{{ section.settings.hero_image | image_url: width: 1500 }}"
              alt="{{ section.settings.heading | escape }}"
              loading="eager"
              fetchpriority="high">
          </picture>
        </div>
      </div>

      <!-- CONTENT -->
      <div class="hero-banner-grid__content">
        <div class="hero-banner-grid__content-inner">

          <!-- Heading -->
          <div class="hero-banner-grid__heading">

            {% if section.settings.show_trust %}
<ul class="trust" aria-label="Trust indicators">
  <li class="trust-item stars" aria-label="5 star rating">
    <span style="color:black;">★★★★★ 4.7 • 15,000+ Optimizers</span>
  </li>
</ul>
{% endif %}

            <h1>
              <span class="hero-banner-grid__heading-text">
                {{ section.settings.heading }}
              </span>

              {% if section.settings.animated_text_list != blank %}
                {% assign texts = section.settings.animated_text_list | split: "|" %}

                <span class="italic-text-slider-viewport">
                  <span class="italic-text-slider-reel">
                    {% for text in texts %}
                      <span class="italic-text-slider-item"><em>{{ text }}</em></span>
                    {% endfor %}
                    <!-- Repeat first item to loop smoothly -->
                    <span class="italic-text-slider-item"><em>{{ texts.first }}</em></span>
                  </span>
                </span>
              {% endif %}
            </h1>
          </div>

          <!-- Description -->
          <div class="hero-banner-grid__text rte">
            {{ section.settings.description }}
          </div>

          <!-- Button -->
          {% if section.settings.button_label != blank %}
            <div class="hero-banner-grid__button">
              <a href="{{ section.settings.button_link }}" class="button">
                {{ section.settings.button_label }}
              </a>
            </div>
            <p class="hero-banner-grid__guarantee">30-Day Results Guarantee • Free Worldwide Shipping</p>
          {% endif %}

          <!-- Bullet Points -->
          {% if section.blocks.size > 0 %}
            <div class="hero-banner-grid__bullet-points">
              {% for block in section.blocks %}
                <div class="hero-banner-grid__bullet-item" {{ block.shopify_attributes }}>
                  <div class="hero-banner-grid__bullet-icon">
                    {% if block.settings.icon != blank %}
