{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .trust-bar-{{ section.id }} {
    background-color: {{ section.settings.background_color }};
    color: {{ section.settings.text_color }};
    border-bottom: 1px solid rgba({{ section.settings.text_color | color_extract: 'red' }}, {{ section.settings.text_color | color_extract: 'green' }}, {{ section.settings.text_color | color_extract: 'blue' }}, 0.1);
  }
{%- endstyle -%}

<div class="trust-bar trust-bar-{{ section.id }} section-{{ section.id }}-padding{% unless section.settings.show_on_mobile %} trust-bar--hide-mobile{% endunless %}">
  <div class="page-width">
    <div class="trust-bar__container">
      {% for block in section.blocks %}
        {% if block.type == 'trust_item' %}
          <div class="trust-bar__item" {{ block.shopify_attributes }}>
            {% if block.settings.link != blank %}
              <a href="{{ block.settings.link }}" class="trust-bar__link">
            {% endif %}
            
            <div class="trust-bar__content">
              {% case block.settings.icon %}
                {% when 'checkmark' %}
                  {% render 'icon-checkmark', class: 'trust-bar__icon' %}
                {% when 'shield' %}
                  {% render 'icon-shield', class: 'trust-bar__icon' %}
                {% when 'certificate' %}
                  {% render 'icon-certificate', class: 'trust-bar__icon' %}
                {% when 'medical' %}
                  {% render 'icon-medical', class: 'trust-bar__icon' %}
                {% when 'users' %}
                  {% render 'icon-users', class: 'trust-bar__icon' %}
                {% when 'star' %}
                  <svg class="trust-bar__icon" aria-hidden="true" focusable="false" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
                    <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
                  </svg>
              {% endcase %}
              
              {% capture __maybe %}{{ block.settings.text | t }}{% endcapture %}
              {% if __maybe contains 'Translation missing' %}
                <span class="trust-bar__text">{{ block.settings.text }}</span>
              {% else %}
                <span class="trust-bar__text">{{ __maybe }}</span>
              {% endif %}
            </div>
            
            {% if block.settings.link != blank %}
              </a>
            {% endif %}
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</div>

{{ 'section-trust-bar.css' | asset_url | stylesheet_tag }}

{% schema %}
{
  "name": "Trust Bar",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color",
      "default": "#F3F4F6"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color",
      "default": "#1F2937"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 50,
      "step": 2,
      "unit": "px",
      "label": "Padding top",
      "default": 12
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 50,
      "step": 2,
      "unit": "px",
      "label": "Padding bottom",
      "default": 12
    },
    {
      "type": "checkbox",
      "id": "show_on_mobile",
      "label": "Show on mobile",
      "default": true
    }
  ],
  "blocks": [
    {
      "type": "trust_item",
      "name": "Trust Item",
      "settings": [
        {
          "type": "select",
          "id": "icon",
          "label": "Icon",
          "options": [
            {
              "value": "checkmark",
              "label": "Checkmark"
            },
            {
              "value": "shield",
              "label": "Shield"
            },
            {
              "value": "certificate",
              "label": "Certificate"
            },
            {
              "value": "medical",
              "label": "Medical"
            },
            {
              "value": "users",
              "label": "Users"
            },
            {
              "value": "star",
              "label": "Star"
            }
          ],
          "default": "checkmark"
        },
        {
          "type": "text",
          "id": "text",
          "label": "Text",
          "default": "Trust signal text"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link (optional)"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Trust Bar",
      "blocks": [
        {
          "type": "trust_item",
          "settings": {
            "icon": "certificate",
            "text": "NSF Certified"
          }
        },
        {
          "type": "trust_item",
          "settings": {
            "icon": "medical",
            "text": "Doctor Formulated"
          }
        },
        {
          "type": "trust_item",
          "settings": {
            "icon": "users",
            "text": "15,000+ Optimizers"
          }
        },
        {
          "type": "trust_item",
          "settings": {
            "icon": "shield",
            "text": "30-Day Guarantee"
          }
        }
      ]
    }
  ]
}
{% endschema %}
