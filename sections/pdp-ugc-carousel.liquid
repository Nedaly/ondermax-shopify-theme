{% comment %}
  PDP UGC Carousel Section
  Social proof with user-generated content and reviews
{% endcomment %}

{% render 'pdp-ugc-carousel', section: section %}

{% schema %}
{
  "name": "PDP UGC Carousel",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "header",
      "content": "Section Settings"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Real People. Real Stories."
    },
    {
      "type": "select",
      "id": "heading_size",
      "label": "Heading Size",
      "options": [
        {
          "value": "h1",
          "label": "H1"
        },
        {
          "value": "h2",
          "label": "H2"
        },
        {
          "value": "h3",
          "label": "H3"
        }
      ],
      "default": "h2"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading",
      "default": "From busy entrepreneurs to biohackers, thousands rely daily."
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color Scheme",
      "default": "background-1"
    },
    {
      "type": "header",
      "content": "Section Padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top Padding",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom Padding",
      "default": 36
    }
  ],
  "blocks": [
    {
      "type": "ugc_item",
      "name": "UGC Item",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Customer Photo"
        },
        {
          "type": "text",
          "id": "customer_name",
          "label": "Customer Name",
          "default": "Sarah M."
        },
        {
          "type": "range",
          "id": "rating",
          "label": "Star Rating",
          "min": 1,
          "max": 5,
          "step": 1,
          "default": 5
        },
        {
          "type": "textarea",
          "id": "review_text",
          "label": "Review Text",
          "default": "No more coffee jitters – subscription was a no-brainer."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "PDP UGC Carousel",
      "blocks": [
        {
          "type": "ugc_item",
          "settings": {
            "customer_name": "Sarah M.",
            "rating": 5,
            "review_text": "No more coffee jitters – subscription was a no-brainer."
          }
        },
        {
          "type": "ugc_item",
          "settings": {
            "customer_name": "Mike R.",
            "rating": 5,
            "review_text": "Game-changer for my morning routine. Energy lasts all day!"
          }
        },
        {
          "type": "ugc_item",
          "settings": {
            "customer_name": "Lisa K.",
            "rating": 5,
            "review_text": "Finally found something that works without the crash."
          }
        },
        {
          "type": "ugc_item",
          "settings": {
            "customer_name": "David T.",
            "rating": 4,
            "review_text": "Almost perfect. Great results, easy to use."
          }
        },
        {
          "type": "ugc_item",
          "settings": {
            "customer_name": "Emma W.",
            "rating": 5,
            "review_text": "Love the subscription model. Never run out!"
          }
        },
        {
          "type": "ugc_item",
          "settings": {
            "customer_name": "Alex P.",
            "rating": 5,
            "review_text": "Best investment in my health and productivity."
          }
        }
      ]
    }
  ]
}
{% endschema %}
