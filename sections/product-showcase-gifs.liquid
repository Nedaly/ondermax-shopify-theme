{% comment %}
Product Showcase GIFs Section
- 2 GIFs in a row, full-width, no padding
- Showcases product functionality
- Responsive design
{% endcomment %}

<div class="product-showcase-gifs section-{{ section.id }}-padding">
  <div class="product-showcase-gifs__container">
    <div class="product-showcase-gifs__grid">
      {% for block in section.blocks limit: 2 %}
        <div class="product-showcase-gifs__item" {{ block.shopify_attributes }}>
          <div class="product-showcase-gifs__gif">
            {% if forloop.index == 1 %}
              <img src="{{ 'ezgif-1c16be4e7b5dee.gif' | asset_url }}" 
                   alt="{{ block.settings.alt_text | default: 'Product showcase' }}"
                   loading="lazy"
                   width="800"
                   height="450"
                   style="width: 100%; height: 100%; object-fit: cover; display: block;">
            {% elsif forloop.index == 2 %}
              <img src="{{ 'ezgif-14cc8c86a229a1.gif' | asset_url }}" 
                   alt="{{ block.settings.alt_text | default: 'Product showcase' }}"
                   loading="lazy"
                   width="800"
                   height="450"
                   style="width: 100%; height: 100%; object-fit: cover; display: block;">
            {% endif %}
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</div>

<style>
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  .product-showcase-gifs {
    background-color: {{ section.settings.background_color }};
    width: 100vw !important;
    margin-left: calc(-50vw + 50%) !important;
    margin-right: calc(-50vw + 50%) !important;
    padding-left: 0 !important;
    padding-right: 0 !important;
    max-width: none !important;
  }

  .product-showcase-gifs__container {
    width: 100%;
    max-width: none !important;
    padding: 0 !important;
    margin: 0 !important;
  }

  .product-showcase-gifs__grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 0;
    width: 100%;
    height: auto;
  }

  .product-showcase-gifs__item {
    position: relative;
    overflow: hidden;
  }

  .product-showcase-gifs__gif {
    position: relative;
    width: 100%;
    height: 0;
    padding-bottom: 56.25%; /* 16:9 aspect ratio */
    overflow: hidden;
  }

  .product-showcase-gifs__gif img {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  /* Mobile responsive */
  @media screen and (max-width: 767px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top | times: 0.5 | round: 0 }}px !important;
      padding-bottom: {{ section.settings.padding_bottom | times: 0.5 | round: 0 }}px !important;
    }
    
    .product-showcase-gifs__grid {
      grid-template-columns: 1fr 1fr;
    }
  }

  /* Desktop responsive */
  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
</style>

{% schema %}
{
  "name": "Product Showcase GIFs",
  "tag": "section",
  "class": "section",
  "max_blocks": 2,
  "settings": [
    {
      "type": "header",
      "content": "Section Settings"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color",
      "default": "#ffffff"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top padding",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom padding",
      "default": 0
    }
  ],
  "blocks": [
    {
      "type": "gif",
      "name": "Product GIF",
      "settings": [
        {
          "type": "text",
          "id": "alt_text",
          "label": "Alt text",
          "default": "Product showcase"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Product Showcase GIFs",
      "blocks": [
        {
          "type": "gif"
        },
        {
          "type": "gif"
        }
      ]
    }
  ]
}
{% endschema %}
