    document.addEventListener('DOMContentLoaded', function() {
      // Add `.row-subheading` class to the paragraph immediately following a `.row-heading`
      document.querySelectorAll('.multirow-with-bullets .image-with-text__heading').forEach(function(headingWrap){
        // Look for a child with class `row-heading` and mark its next element as subheading if it's a paragraph
        var rowHeading = headingWrap.querySelector('.row-heading');
        if (rowHeading) {
          var next = rowHeading.nextElementSibling;
          if (next && next.tagName === 'P') {
            next.classList.add('row-subheading');
          }
        }
      });
      // Simple direct approach to handle video click overlays
      const videoOverlays = document.querySelectorAll('.video-click-play-overlay');

      function setOverlayIcon(overlay, svgHtml){
        const existingIcon = overlay.querySelector('.play_icon_new');
        if (existingIcon) {
          existingIcon.outerHTML = svgHtml;
        } else {
          overlay.insertAdjacentHTML('beforeend', svgHtml);
        }
      }
      
      // Play and pause templates reusing octagon play visual
      const playSvgTemplate = `<div class='play_icon_new'>
        <svg width="64" height="64" viewBox="0 0 64 64" fill="none" xmlns="http://www.w3.org/2000/svg" class="play_icon">
          <g clip-path="url(#clip0_2591_34021)">
            <path d="M32 0L54.6306 9.36937L64 32L54.6306 54.6306L32 64L9.36937 54.6306L0 32L9.36937 9.36937L32 0Z" fill="white"/>
            <path d="M24 19V45L44 32L24 19Z" fill="#8b5cf6"/>
          </g>
          <defs>
            <clipPath id="clip0_2591_34021"><rect width="64" height="64" fill="white"/></clipPath>
          </defs>
        </svg>
      </div>`;
      const pauseSvgTemplate = `<div class='play_icon_new'>
        <svg width="64" height="64" viewBox="0 0 64 64" fill="none" xmlns="http://www.w3.org/2000/svg" class="play_icon">
          <g clip-path="url(#clip0_2591_34021)">
            <path d="M32 0L54.6306 9.36937L64 32L54.6306 54.6306L32 64L9.36937 54.6306L0 32L9.36937 9.36937L32 0Z" fill="white"/>
            <rect x="26" y="21" width="6" height="22" fill="#8b5cf6"/>
            <rect x="36" y="21" width="6" height="22" fill="#8b5cf6"/>
          </g>
          <defs>
            <clipPath id="clip0_2591_34021"><rect width="64" height="64" fill="white"/></clipPath>
          </defs>
        </svg>
      </div>`;
      
      videoOverlays.forEach(overlay => {
        // Set initial play icon
        setOverlayIcon(overlay, playSvgTemplate);
        
        // Ensure the overlay is visible initially
        overlay.classList.remove('video-overlay--hidden');
        
        overlay.addEventListener('click', function() {
          const videoId = this.getAttribute('data-video-id');
          const video = document.getElementById(videoId);
          const videoWrapper = video ? video.closest('.image-with-text__media--video-wrapper') : null;
          const card = videoWrapper ? videoWrapper.closest('.image-with-text') : null;
          const explicitPoster = videoWrapper ? videoWrapper.querySelector('.explicit-video-poster') : null;
          
          if (video) {
            // Pause all other videos first
            document.querySelectorAll('.image-with-text__video').forEach(v => {
              if (v !== video) {
                v.pause();
                // Show overlays for other videos and set play icon
                const otherOverlay = document.querySelector(`[data-video-id="${v.id}"]`);
                const otherVideoWrapper = v.closest('.image-with-text__media--video-wrapper');
                const otherExplicitPoster = otherVideoWrapper ? otherVideoWrapper.querySelector('.explicit-video-poster') : null;

                if (otherOverlay) {
                  setOverlayIcon(otherOverlay, playSvgTemplate);
                  otherOverlay.classList.remove('video-overlay--hidden');
                  otherOverlay.classList.remove('video-play-active');
                }
                if (otherExplicitPoster) {
                  otherExplicitPoster.classList.remove('explicit-video-poster--hidden');
                }
              }
            });
            
            // Toggle play/pause when overlay is clicked
            if (video.paused) {
              // Ensure video isn't muted if that's the intention
              if (!video.hasAttribute('muted')) {
                video.muted = false;
              }
              
              // Start fading out the poster immediately for premium feel
              if (explicitPoster) {
                explicitPoster.classList.add('explicit-video-poster--hidden');
              }
              
              // Play the video
              video.play();
              
              // Change to pause icon and animate meta out subtly
              setOverlayIcon(this, pauseSvgTemplate);
              this.classList.add('video-play-active');
              this.classList.add('video-overlay--hidden');
              if (card) { card.classList.add('playing'); card.classList.remove('paused'); }
              
              // The overlay stays visible but with reduced opacity
              setTimeout(() => {
                this.classList.add('video-overlay--hidden');
              }, 400);

            } else {
              // Pause the video
              video.pause();
              
              // Change back to play icon and make fully visible
              setOverlayIcon(this, playSvgTemplate);
              this.classList.remove('video-play-active');
              this.classList.remove('video-overlay--hidden');
              if (card) { card.classList.add('paused'); card.classList.remove('playing'); }

              // Show poster with a slight delay for smooth transition
              if (explicitPoster) {
                setTimeout(() => {
                  explicitPoster.classList.remove('explicit-video-poster--hidden');
                }, 100);
              }
            }
          }
        });
      });
      
      // Handle video events
      document.querySelectorAll('.image-with-text__video').forEach(video => {
        const videoWrapper = video.closest('.image-with-text__media--video-wrapper');
        const card = videoWrapper ? videoWrapper.closest('.image-with-text') : null;
        const explicitPoster = videoWrapper ? videoWrapper.querySelector('.explicit-video-poster') : null;

        // When video ends, show the overlay with play icon and the explicit poster
        video.addEventListener('ended', function() {
          const overlay = document.querySelector(`[data-video-id="${this.id}"]`);
          if (overlay) {
            setOverlayIcon(overlay, playSvgTemplate);
            overlay.classList.remove('video-play-active');
            overlay.classList.remove('video-overlay--hidden');
          }
          if (card) { card.classList.add('paused'); card.classList.remove('playing'); }
          if (explicitPoster) {
            setTimeout(() => {
              explicitPoster.classList.remove('explicit-video-poster--hidden');
            }, 200);
          }
        });

        // When video starts playing (e.g. via controls), hide explicit poster and update icon
        video.addEventListener('play', function() {
          const overlay = document.querySelector(`[data-video-id="${this.id}"]`);
          if (overlay) {
            setOverlayIcon(overlay, pauseSvgTemplate);
            overlay.classList.add('video-play-active');
            overlay.classList.add('video-overlay--hidden');
          }
          if (card) { card.classList.add('playing'); card.classList.remove('paused'); }
          if (explicitPoster) {
            explicitPoster.classList.add('explicit-video-poster--hidden');
          }
        });

        // When video is paused (e.g. via controls), show explicit poster and update icon
        video.addEventListener('pause', function() {
          const overlay = document.querySelector(`[data-video-id="${this.id}"]`);
          if (overlay && !this.ended) { // Do not revert icon if pause is due to video ending
            setOverlayIcon(overlay, playSvgTemplate);
            overlay.classList.remove('video-play-active');
            overlay.classList.remove('video-overlay--hidden');
          }
          if (card && !this.ended) { card.classList.add('paused'); card.classList.remove('playing'); }
          if (explicitPoster && !this.ended) {
            setTimeout(() => {
              explicitPoster.classList.remove('explicit-video-poster--hidden');
            }, 100);
          }
        });
        
        // Also add click directly to video to toggle play/pause
        video.addEventListener('click', function(e) {
          e.preventDefault();
          const overlay = document.querySelector(`[data-video-id="${this.id}"]`);
          if (overlay) {
            // Trigger the overlay click to handle play/pause
            overlay.click();
          }
        });
      });
    });
