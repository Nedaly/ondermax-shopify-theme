{{ 'benefits-story.css' | asset_url | stylesheet_tag }}

<div class="benefits-story section-{{ section.id }}-padding">
  <div class="page-width">
    {%- if section.settings.heading != blank -%}
      <div class="benefits-story__header">
        <h2 class="benefits-story__heading">{{ section.settings.heading }}</h2>
      </div>
    {%- endif -%}

    <div class="benefits-story__grid">
      <div class="benefit-card" data-animation="stick">
        <div class="benefit-card__icon">
          <svg width="120" height="120" viewBox="0 0 88 88" role="img" aria-label="Apply in seconds" focusable="false">
            <g class="hand" stroke="#0C1113" stroke-width="4" fill="none" stroke-linecap="round" stroke-linejoin="round">
              <path d="M26 50c2 10 12 18 24 18 8 0 12-4 12-9V36c0-3-5-3-5 0v11M46 28v17M38 30v15M30 36v9" />
            </g>
            <g class="patch" fill="url(#patch-gradient)">
              <rect x="22" y="52" rx="6" ry="6" width="28" height="16" />
              <rect class="peel" x="44" y="52" rx="4" ry="4" width="8" height="10" fill="#fff" opacity=".65"/>
            </g>
            <rect class="glint" x="-40" y="50" width="36" height="20" fill="url(#gl-stick)" opacity="0"/>
            <defs>
              <linearGradient id="patch-gradient" x1="0%" y1="0%" x2="100%" y2="100%">
                <stop offset="0%" style="stop-color:#1C8E8E;stop-opacity:1" />
                <stop offset="50%" style="stop-color:#2BA5A5;stop-opacity:1" />
                <stop offset="100%" style="stop-color:#1C8E8E;stop-opacity:1" />
              </linearGradient>
              <linearGradient id="gl-stick" x1="0" x2="1">
                <stop offset="0" stop-color="#fff" stop-opacity="0"/>
                <stop offset="0.5" stop-color="#fff" stop-opacity="0.35"/>
                <stop offset="1" stop-color="#fff" stop-opacity="0"/>
              </linearGradient>
            </defs>
          </svg>
        </div>
        <div class="benefit-card__content">
          <h3 class="benefit-card__title">{{ 'ui.benefits_story.stick_it' | t }}</h3>
          <p class="benefit-card__description">Apply in seconds. No pills, no swallowing.</p>
        </div>
      </div>

      <div class="benefit-card" data-animation="absorb">
        <div class="benefit-card__icon">
          <svg width="120" height="120" viewBox="0 0 88 88" role="img" aria-label="Transdermal absorption" focusable="false">
            <rect class="patch" x="26" y="18" width="36" height="14" rx="7" fill="url(#patch-gradient-2)"/>
            <rect class="skin" x="14" y="40" width="60" height="22" rx="11" fill="url(#skin-absorb)"/>
            <g class="p">
              <circle cx="44" cy="32" r="3" fill="#fff"/>
              <circle cx="36" cy="30" r="2.5" fill="#CFF3F3"/>
              <circle cx="52" cy="30" r="2.5" fill="#CFF3F3"/>
              <circle cx="40" cy="32" r="2" fill="#fff"/>
              <circle cx="48" cy="32" r="2" fill="#fff"/>
            </g>
            <defs>
              <linearGradient id="patch-gradient-2" x1="0%" y1="0%" x2="100%" y2="100%">
                <stop offset="0%" style="stop-color:#1C8E8E;stop-opacity:1" />
                <stop offset="50%" style="stop-color:#2BA5A5;stop-opacity:1" />
                <stop offset="100%" style="stop-color:#1C8E8E;stop-opacity:1" />
              </linearGradient>
              <linearGradient id="skin-absorb" x1="0" x2="0" y1="0" y2="1">
                <stop offset="0" stop-color="rgba(28,142,142,.14)"/>
                <stop offset="1" stop-color="rgba(28,142,142,.04)"/>
              </linearGradient>
            </defs>
          </svg>
        </div>
        <div class="benefit-card__content">
          <h3 class="benefit-card__title">{{ 'ui.benefits_story.absorb_it' | t }}</h3>
          <p class="benefit-card__description">Transdermal delivery for faster absorption and steady release.</p>
        </div>
      </div>

      <div class="benefit-card" data-animation="feel">
        <div class="benefit-card__icon">
          <svg width="120" height="120" viewBox="0 0 88 88" role="img" aria-label="Feel great" focusable="false">
            <g class="ring" fill="none" stroke="url(#heart-gradient)" stroke-width="2" opacity="0">
              <circle cx="44" cy="44" r="22" />
            </g>
            <path class="heart" d="M44 60s-16-9.6-16-20a9 9 0 0 1 16-5 9 9 0 0 1 16 5c0 10.4-16 20-16 20z" fill="url(#heart-gradient)" />
            <path class="smile" d="M36 48q8 6 16 0" stroke="#fff" stroke-width="3" fill="none" stroke-linecap="round" opacity="0"/>
            <g class="sparkles" fill="#fff" opacity="0">
              <circle cx="26" cy="36" r="2"/>
              <circle cx="62" cy="34" r="1.8"/>
              <circle cx="60" cy="56" r="1.6"/>
            </g>
            <defs>
              <linearGradient id="heart-gradient" x1="0%" y1="0%" x2="100%" y2="100%">
                <stop offset="0%" style="stop-color:#1C8E8E;stop-opacity:1" />
                <stop offset="50%" style="stop-color:#2BA5A5;stop-opacity:1" />
                <stop offset="100%" style="stop-color:#1C8E8E;stop-opacity:1" />
              </linearGradient>
            </defs>
          </svg>
        </div>
        <div class="benefit-card__content">
          <h3 class="benefit-card__title">{{ 'ui.benefits_story.feel_it' | t }}</h3>
          <p class="benefit-card__description">Clean energy by day. Deep recovery by night.</p>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  .benefits-story {
    padding: 6rem 0;
  }

  .benefits-story__header {
    text-align: center;
    margin-bottom: 5rem;
  }

  .benefits-story__heading {
    font-size: clamp(3rem, 6vw, 4.5rem);
    font-weight: 800;
    color: #0C1113;
    margin: 0;
    letter-spacing: -0.03em;
    line-height: 1.05;
    text-transform: uppercase;
  }

  .benefits-story__grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 4rem;
    max-width: 1000px;
    margin: 0 auto;
  }

  .benefit-card {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    gap: 2rem;
    padding: 0;
    transition: all 0.3s ease;
    opacity: 0;
    transform: translateY(20px);
    border: none;
    background: transparent;
  }

  .benefit-card.animate {
    opacity: 1;
    transform: translateY(0);
  }

  .benefit-card:hover {
    transform: translateY(-2px);
  }

  .benefit-card__icon {
    flex-shrink: 0;
    width: 120px;
    height: 120px;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: transform 0.3s ease;
  }

  .benefit-card:hover .benefit-card__icon {
    transform: scale(1.1);
  }

  .benefit-card__content {
    flex: 1;
  }

  .benefit-card__title {
    font-size: clamp(2rem, 4vw, 2.5rem);
    font-weight: 800;
    color: #0C1113;
    margin: 0 0 1rem 0;
    letter-spacing: -0.02em;
    line-height: 1.1;
    text-transform: uppercase;
  }

  .benefit-card__description {
    font-size: clamp(1.125rem, 2.5vw, 1.25rem);
    color: #4A4A4A;
    margin: 0;
    line-height: 1.5;
    font-weight: 500;
    max-width: 300px;
  }

  /* Mobile responsive */
  @media (min-width: 768px) {
    .benefits-story__grid {
      grid-template-columns: repeat(3, 1fr);
      max-width: none;
      gap: 5rem;
    }

    .benefit-card {
      flex-direction: column;
      text-align: center;
      padding: 0;
    }

    .benefit-card__icon {
      margin-bottom: 0;
    }
  }

  /* Large screens */
  @media (min-width: 1024px) {
    .benefits-story__grid {
      gap: 6rem;
    }
    
    .benefits-story__header {
      margin-bottom: 6rem;
    }
    
    .benefits-story {
      padding: 8rem 0;
    }
  }

  /* Animation keyframes */
  @keyframes stick-slide {
    0% { transform: translateX(-20px); opacity: 0; }
    100% { transform: translateX(0); opacity: 1; }
  }

  @keyframes peel-tilt {
    0% { transform: rotate(0deg); }
    100% { transform: rotate(-15deg); }
  }

  @keyframes glint-sweep {
    0% { transform: translateX(-40px); opacity: 0; }
    50% { opacity: 1; }
    100% { transform: translateX(40px); opacity: 0; }
  }

  @keyframes absorb-drop {
    0% { transform: translateY(-10px); opacity: 0; }
    100% { transform: translateY(0); opacity: 1; }
  }

  @keyframes beat {
    0%, 100% { transform: scale(1); }
    50% { transform: scale(1.1); }
  }

  @keyframes ring {
    0% { transform: scale(0.8); opacity: 0; }
    50% { opacity: 1; }
    100% { transform: scale(1.2); opacity: 0; }
  }

  @keyframes smile-in {
    0% { opacity: 0; }
    100% { opacity: 1; }
  }

  @keyframes sparkle {
    0% { opacity: 0; transform: scale(0.5); }
    50% { opacity: 1; transform: scale(1); }
    100% { opacity: 0; transform: scale(0.5); }
  }

  /* Animation triggers */
  .benefit-card[data-animation="stick"].animate .patch {
    animation: stick-slide 900ms ease-out forwards;
  }

  .benefit-card[data-animation="stick"].animate .peel {
    animation: peel-tilt 700ms 260ms ease-out forwards;
  }

  .benefit-card[data-animation="stick"].animate .glint {
    animation: glint-sweep 1100ms 650ms ease-out forwards;
  }

  .benefit-card[data-animation="absorb"].animate .p circle {
    animation: absorb-drop 1.6s ease-in forwards;
  }

  .benefit-card[data-animation="absorb"].animate .p circle:nth-child(2) { animation-delay: 0.08s; }
  .benefit-card[data-animation="absorb"].animate .p circle:nth-child(3) { animation-delay: 0.16s; }
  .benefit-card[data-animation="absorb"].animate .p circle:nth-child(4) { animation-delay: 0.24s; }
  .benefit-card[data-animation="absorb"].animate .p circle:nth-child(5) { animation-delay: 0.32s; }

  .benefit-card[data-animation="feel"].animate .heart {
    animation: beat 600ms ease-in-out 0s 3;
  }

  .benefit-card[data-animation="feel"].animate .ring {
    animation: ring 600ms ease-out 120ms 3;
  }

  .benefit-card[data-animation="feel"].animate .smile {
    animation: smile-in 500ms 180ms ease-out forwards;
  }

  .benefit-card[data-animation="feel"].animate .sparkles {
    animation: sparkle 520ms 220ms ease-out forwards;
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const cards = document.querySelectorAll('.benefit-card');
    
    const observer = new IntersectionObserver((entries) => {
      entries.forEach((entry, index) => {
        if (entry.isIntersecting) {
          setTimeout(() => {
            entry.target.classList.add('animate');
          }, index * 200); // Stagger animation
        }
      });
    }, {
      threshold: 0.3,
      rootMargin: '0px 0px -50px 0px'
    });

    cards.forEach(card => {
      observer.observe(card);
    });
  });
</script>

{% schema %}
{
  "name": "Benefits Story",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "How It Works"
    },
    {
      "type": "header",
      "content": "Section padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top padding",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom padding",
      "default": 36
    }
  ],
  "presets": [
    {
      "name": "Benefits Story"
    }
  ]
}
{% endschema %}
