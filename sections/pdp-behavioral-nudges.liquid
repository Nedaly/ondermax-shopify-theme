    <div class="pdp-nudges-container">
      
      {% if section.settings.enable_scarcity_banner %}
        <div class="pdp-scarcity-banner" data-scarcity-banner>
          <div class="scarcity-banner-content">
            <span class="scarcity-icon">ðŸ”¥</span>
            <span class="scarcity-text">{{ section.settings.scarcity_text | default: '1,200+ subscribers upgraded today' }}</span>
          </div>
        </div>
      {% endif %}
      
      {% if section.settings.enable_stock_alert %}
        <div class="pdp-stock-alert" data-stock-alert>
          <div class="stock-alert-header">
            <span class="stock-icon">ðŸ“¦</span>
            <span class="stock-text">Limited Stock Available</span>
          </div>
