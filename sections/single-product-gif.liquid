{% comment %}
Single Product GIF Section
- 1 GIF, full-width, no padding
- Showcases product functionality
- Responsive design
{% endcomment %}

<div class="single-product-gif section-{{ section.id }}-padding">
  <div class="single-product-gif__container">
    <div class="single-product-gif__item">
      <div class="single-product-gif__gif">
        <img src="{{ 'ezgif-14cc8c86a229a1.gif' | asset_url }}" 
             alt="{{ section.settings.alt_text | default: 'Product showcase' }}"
             loading="lazy"
             width="800"
             height="450"
             style="width: 100%; height: 100%; object-fit: cover; display: block;">
      </div>
    </div>
  </div>
</div>

<style>
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  .single-product-gif {
    background-color: {{ section.settings.background_color }};
    width: 100vw !important;
    margin-left: calc(-50vw + 50%) !important;
    margin-right: calc(-50vw + 50%) !important;
    padding-left: 0 !important;
    padding-right: 0 !important;
    max-width: none !important;
  }

  .single-product-gif__container {
    width: 100%;
    max-width: none !important;
    padding: 0 !important;
    margin: 0 !important;
  }

  .single-product-gif__item {
    position: relative;
    overflow: hidden;
    width: 100%;
  }

  .single-product-gif__gif {
    position: relative;
    width: 100%;
    height: 0;
    padding-bottom: 56.25%; /* 16:9 aspect ratio */
    overflow: hidden;
  }

  .single-product-gif__gif img {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  /* Mobile responsive */
  @media screen and (max-width: 767px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top | times: 0.5 | round: 0 }}px !important;
      padding-bottom: {{ section.settings.padding_bottom | times: 0.5 | round: 0 }}px !important;
    }
  }

  /* Desktop responsive */
  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
</style>

{% schema %}
{
  "name": "Single Product GIF",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "header",
      "content": "Section Settings"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color",
      "default": "#ffffff"
    },
    {
      "type": "text",
      "id": "alt_text",
      "label": "Alt text",
      "default": "Product showcase"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top padding",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom padding",
      "default": 0
    }
  ],
  "presets": [
    {
      "name": "Single Product GIF"
    }
  ]
}
{% endschema %}
