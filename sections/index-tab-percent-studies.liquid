<div class="shopify-section Index_tab_percent_studies_new" style="background: {{ section.settings.background_color }};">

  {{ 'index-tab-percent-studies.css' | asset_url | stylesheet_tag }}

  <div class="Index_tab_percent_studies_main_new">
    <div class="page-width">

      <!-- IMAGE -->
      <div class="Index_tab_percent_studies_innerstatic_videoimage_new">
        {% if section.settings.desktop_image %}
          <img
            src="{{ section.settings.desktop_image | image_url: width: 2000 }}"
            class="desktop_image_new"
            loading="lazy"
          >
        {% endif %}

        {% if section.settings.mobile_image %}
          <img
            src="{{ section.settings.mobile_image | image_url: width: 900 }}"
            class="mobile_image_new"
            loading="lazy"
          >
        {% endif %}
      </div>

      <!-- CONTENT -->
      <div class="Index_tab_percent_studies_inneroverlay_new">

        <!-- LEFT : PERCENT STUDIES -->
        <div class="Index_tab_percent_studies_inneroverlay_innersides_mainleft_new">

          <div class="Index_tab_percent_studies_inneroverlay_innersides_innerleft_maintitle_new">
            {{ section.settings.left_title }}
          </div>

          <div class="Index_tab_percent_studies_inneroverlay_innersides_innerleft_innerlists_mainloop_new">
            {% for block in section.blocks %}
              {% if block.type == 'stat' %}
                <div class="Index_tab_percent_studies_inneroverlay_innersides_innerleft_innerlists_innerloop_mainboxs_new" {{ block.shopify_attributes }}>
                  <h2><span>{{ block.settings.percent }}</span>%</h2>
                  <p>{{ block.settings.text }}</p>
                </div>
              {% endif %}
            {% endfor %}
          </div>

        </div>

        <!-- RIGHT : NSF + TEXT -->
        <div class="Index_tab_percent_studies_inneroverlay_innersides_innerright_new">

          <h2>{{ section.settings.main_heading }}</h2>

          <!-- NSF BANNER -->
          <div class="nsf-certified-banner">

            <div class="nsf-certified-banner__left">
              <span class="nsf-certified-banner__trophy">üèÜ</span>
              <div class="nsf-certified-banner__text">
                <span class="nsf-certified-banner__title">{{ section.settings.nsf_title }}</span>
                <span class="nsf-certified-banner__subtitle">{{ section.settings.nsf_subtitle }}</span>
              </div>
            </div>

            <div class="nsf-certified-banner__divider"></div>

            <div class="nsf-certified-banner__right">
              <div class="nsf-certified-banner__right-text">
                <span class="nsf-certified-banner__trusted">
                  Trusted by <span class="nsf-certified-banner__name">{{ section.settings.trusted_name }}</span>
                </span>
                <span class="nsf-certified-banner__role">{{ section.settings.trusted_role }}</span>
              </div>

              {% if section.settings.trusted_image %}
                <div class="nsf-certified-banner__image">
                  <img src="{{ section.settings.trusted_image | image_url: width: 200 }}" loading="lazy">
                </div>
              {% endif %}
            </div>
          </div>

          <p>{{ section.settings.description }}</p>

          <div class="Index_tab_percent_studies_inneroverlay_buttons_new">
            {% if section.settings.primary_button_link %}
              <a href="{{ section.settings.primary_button_link }}" class="button button_inverse_primary">
                {{ section.settings.primary_button_text }}
              </a>
            {% endif %}

            {% if section.settings.secondary_button_link %}
              <a href="{{ section.settings.secondary_button_link }}" class="button button_lightcoral_new">
                {{ section.settings.secondary_button_text }}
              </a>
            {% endif %}
          </div>

        </div>

      </div>

      <!-- FOOTNOTE -->
      <div class="Index_tab_percent_studies_maininfos_new">
        <p>{{ section.settings.footnote }}</p>
      </div>

    </div>
  </div>
</div>

{% schema %}
{
  "name": "Clinical Studies Section",
  "settings": [
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color",
      "default": "#eae0d2"
    },
    {
      "type": "image_picker",
      "id": "desktop_image",
      "label": "Desktop image"
    },
    {
      "type": "image_picker",
      "id": "mobile_image",
      "label": "Mobile image"
    },
    {
      "type": "text",
      "id": "left_title",
      "label": "Left title",
      "default": "Daily Ultimate Essentials"
    },
    {
      "type": "richtext",
      "id": "main_heading",
      "label": "Main heading",
      "default": "<p>Clinically Proven.<br>More Energy.<br>A Healthier Gut.</p>"
    },
    {
      "type": "text",
      "id": "nsf_title",
      "label": "NSF title",
      "default": "NSF CERTIFIED FOR SPORT"
    },
    {
      "type": "text",
      "id": "nsf_subtitle",
      "label": "NSF subtitle",
      "default": "280+ Substances Tested"
    },
    {
      "type": "text",
      "id": "trusted_name",
      "label": "Trusted person name",
      "default": "Aryna Sabalenka"
    },
    {
      "type": "text",
      "id": "trusted_role",
      "label": "Trusted person role",
      "default": "World No. 1 Tennis Player"
    },
    {
      "type": "image_picker",
      "id": "trusted_image",
      "label": "Trusted person image"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description text"
    },
    {
      "type": "text",
      "id": "primary_button_text",
      "label": "Primary button text",
      "default": "View Third-Party Testing Results"
    },
    {
      "type": "url",
      "id": "primary_button_link",
      "label": "Primary button link"
    },
    {
      "type": "text",
      "id": "secondary_button_text",
      "label": "Secondary button text",
      "default": "Learn More"
    },
    {
      "type": "url",
      "id": "secondary_button_link",
      "label": "Secondary button link"
    },
    {
      "type": "textarea",
      "id": "footnote",
      "label": "Footnote text"
    }
  ],
  "blocks": [
    {
      "type": "stat",
      "name": "Study result",
      "settings": [
        {
          "type": "number",
          "id": "percent",
          "label": "Percentage",
          "default": 95
        },
        {
          "type": "textarea",
          "id": "text",
          "label": "Description"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Clinical Studies"
    }
  ]
}
{% endschema %}
<style>
  /* NSF Certified Banner Styles */
  .nsf-certified-banner {
    display: flex;
    align-items: center;
    justify-content: center;
    width: fit-content;
    max-width: 680px;
    padding: 12px 16px 12px 24px;
    margin: 24px auto 0;
    border-radius: 14px;
    border: 2px solid #F59E0B;
    background: linear-gradient(105deg, #FEF9E7 0%, #FEF3C7 40%, #FDE68A 100%);
    box-shadow: 0 6px 20px 0 rgba(245, 158, 11, 0.28), 0 2px 6px rgba(0,0,0,0.04);
    gap: 0;
  }

  .nsf-certified-banner__left {
    display: flex;
    align-items: center;
    gap: 14px;
    padding-right: 20px;
  }

  .nsf-certified-banner__trophy {
    font-size: 36px;
    line-height: 1;
    filter: drop-shadow(0 2px 3px rgba(0,0,0,0.1));
  }

  .nsf-certified-banner__text {
    display: flex;
    flex-direction: column;
    gap: 3px;
  }

  .nsf-certified-banner__title {
    font-size: 15px;
    font-weight: 800;
    color: #44403C;
    text-transform: uppercase;
    letter-spacing: 0.8px;
    line-height: 1.2;
  }

  .nsf-certified-banner__subtitle {
    font-size: 13px;
    font-weight: 600;
    color: #B45309;
    letter-spacing: 0.2px;
  }

  .nsf-certified-banner__divider {
    display: block !important;
    width: 2px;
    min-width: 2px;
    height: 52px;
    min-height: 52px;
    background: linear-gradient(180deg, rgba(245, 158, 11, 0.1) 0%, rgba(245, 158, 11, 0.35) 50%, rgba(245, 158, 11, 0.1) 100%);
    flex-shrink: 0;
    border-radius: 2px;
  }

  .nsf-certified-banner__right {
    display: flex;
    align-items: center;
    gap: 12px;
    padding-left: 20px;
  }
  
  .nsf-certified-banner__right-text {
    display: flex;
    flex-direction: column;
    gap: 3px;
  }

  .nsf-certified-banner__trusted {
    font-size: 14px;
    font-weight: 600;
    color: #44403C;
    line-height: 1.3;
  }

  .nsf-certified-banner__name {
    color: #B45309;
    font-weight: 700;
  }

  .nsf-certified-banner__role {
    font-size: 13px;
    font-weight: 500;
    color: #57534E;
    line-height: 1.3;
  }
  
  .nsf-certified-banner__image {
    width: 64px;
    height: 64px;
    border-radius: 50%;
    overflow: hidden;
    flex-shrink: 0;
    border: 3px solid #F59E0B;
    box-shadow: 0 2px 8px rgba(245, 158, 11, 0.3);
  }
  
  .nsf-certified-banner__image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center top;
  }

  /* Tablet */
  @media screen and (max-width: 989px) {
    .nsf-certified-banner {
      max-width: 600px;
      padding: 10px 14px 10px 20px;
    }
    
    .nsf-certified-banner__left {
      padding-right: 16px;
      gap: 12px;
    }
    
    .nsf-certified-banner__right {
      padding-left: 16px;
      gap: 10px;
    }
    
    .nsf-certified-banner__title {
      font-size: 13px;
    }
    
    .nsf-certified-banner__subtitle,
    .nsf-certified-banner__role {
      font-size: 12px;
    }
    
    .nsf-certified-banner__trusted {
      font-size: 13px;
    }
    
    .nsf-certified-banner__trophy {
      font-size: 30px;
    }
    
    .nsf-certified-banner__image {
      width: 54px;
      height: 54px;
      border-width: 2px;
    }
  }

  /* Mobile */
  @media screen and (max-width: 749px) {
    .nsf-certified-banner {
      flex-direction: column;
      padding: 16px 20px;
      gap: 12px;
      max-width: calc(100% - 32px);
      margin: 20px auto 0;
      text-align: center;
    }

    .nsf-certified-banner__left {
      flex-direction: column;
      padding-right: 0;
      gap: 8px;
      width: 100%;
    }

    .nsf-certified-banner__divider {
      display: block !important;
      width: 80%;
      min-width: 80%;
      height: 2px;
      min-height: 2px;
      background: linear-gradient(90deg, rgba(245, 158, 11, 0.1) 0%, rgba(245, 158, 11, 0.35) 50%, rgba(245, 158, 11, 0.1) 100%);
    }

    .nsf-certified-banner__right {
      flex-direction: column;
      padding-left: 0;
      width: 100%;
      align-items: center;
      gap: 10px;
    }
    
    .nsf-certified-banner__right-text {
      align-items: center;
    }
    
    .nsf-certified-banner__text {
      align-items: center;
    }

    .nsf-certified-banner__title {
      font-size: 13px;
      letter-spacing: 0.6px;
    }

    .nsf-certified-banner__subtitle {
      font-size: 12px;
    }
    
    .nsf-certified-banner__trusted {
      font-size: 13px;
    }

    .nsf-certified-banner__role {
      font-size: 12px;
    }
    
    .nsf-certified-banner__trophy {
      font-size: 32px;
    }
    
    .nsf-certified-banner__image {
      width: 58px;
      height: 58px;
      border-width: 2px;
      order: -1;
    }
  }
  
  /* Small mobile */
  @media screen and (max-width: 479px) {
    .nsf-certified-banner {
      padding: 14px 16px;
      gap: 10px;
    }
    
    .nsf-certified-banner__title {
      font-size: 12px;
    }
    
    .nsf-certified-banner__subtitle,
    .nsf-certified-banner__role {
      font-size: 11px;
    }
    
    .nsf-certified-banner__trusted {
      font-size: 12px;
    }
    
    .nsf-certified-banner__trophy {
      font-size: 28px;
    }
    
    .nsf-certified-banner__image {
      width: 54px;
      height: 54px;
    }
  }
  
  /* Extra small mobile */
  @media screen and (max-width: 359px) {
    .nsf-certified-banner {
      padding: 12px 14px;
      gap: 8px;
      max-width: calc(100% - 24px);
    }
    
    .nsf-certified-banner__title {
      font-size: 11px;
      letter-spacing: 0.4px;
    }
    
    .nsf-certified-banner__subtitle,
    .nsf-certified-banner__trusted,
    .nsf-certified-banner__role {
      font-size: 10px;
    }
    
    .nsf-certified-banner__trophy {
      font-size: 24px;
    }
    
    .nsf-certified-banner__image {
      width: 50px;
      height: 50px;
    }
  }
</style>