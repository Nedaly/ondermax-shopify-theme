

<script>
  document.addEventListener('DOMContentLoaded', function () {
    const carouselSwiper = new Swiper('.carousel-section__slider', {
      slidesPerView: 5,            // Number of slides visible on desktop
      spaceBetween: 20,             // Gap between slides
      loop: true,                   // Infinite loop
      speed: 5000,                  // Continuous speed
      autoplay: {
        delay: 0,                   // No delay between slides
        disableOnInteraction: false,
      },
      freeMode: true,               // Smooth continuous scrolling
      freeModeMomentum: false,      // Prevent slowing after swipe
      grabCursor: true,
      breakpoints: {
        320: {
          slidesPerView: 1,        // Mobile: show 1 slide
        },
        768: {
          slidesPerView: 3,        // Tablet
        },
        1024: {
          slidesPerView: 5,        // Desktop
        }
      },
      loopedSlides: 50,             // Number of duplicated slides for seamless loop
    });
  });
</script>


