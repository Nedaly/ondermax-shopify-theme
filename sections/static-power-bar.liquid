{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.mobile_padding_top }}px;
    padding-bottom: {{ section.settings.mobile_padding_bottom }}px;
  }

  .static-power-bar-{{ section.id }} {
    background: {{ section.settings.custom_colors_background }};
    color: {{ section.settings.custom_colors_text }};
  }

  .static-power-bar-{{ section.id }} .power-badge {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 12px 16px;
    border-radius: 20px;
    background: rgba(255, 255, 255, 0.1);
    font-size: {{ section.settings.mobile_text_size }}px;
    font-weight: 600;
    white-space: nowrap;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.desktop_padding_top }}px;
      padding-bottom: {{ section.settings.desktop_padding_bottom }}px;
    }

    .static-power-bar-{{ section.id }} .power-badge {
      font-size: {{ section.settings.desktop_text_size }}px;
      padding: 16px 24px;
    }
  }

  .static-power-bar-{{ section.id }} .power-badges-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 12px;
    justify-items: center;
  }

  @media screen and (min-width: 750px) {
    .static-power-bar-{{ section.id }} .power-badges-grid {
      grid-template-columns: repeat(4, 1fr);
      gap: 16px;
    }
  }
{%- endstyle -%}

<div class="static-power-bar-{{ section.id }} section-{{ section.id }}-padding">
  <div class="page-width">
    <div class="power-badges-grid">
      {%- for block in section.blocks -%}
        {%- case block.type -%}
          {%- when 'power_badge' -%}
            <div class="power-badge" {{ block.shopify_attributes }}>
              {%- if block.settings.icon != blank -%}
                <span class="power-badge__icon">{{ block.settings.icon }}</span>
              {%- endif -%}
              <span class="power-badge__text">{{ block.settings.text | t }}</span>
            </div>
        {%- endcase -%}
      {%- endfor -%}
    </div>
  </div>
</div>

