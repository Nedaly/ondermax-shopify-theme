<div class="quote-and-logos-section">
  <div class="quote-and-logos">
    <div class="quote-and-logos__inner page-width">

      <div class="quote-and-logos__quote-carousel">
        {% for block in section.blocks %}
          {% if block.type == 'quote' %}
            <div
              class="quote-and-logos__quote-slide {% if forloop.first %}active{% endif %}"
              data-index="{{ forloop.index0 }}"
              {{ block.shopify_attributes }}
            >
              <div class="quote-and-logos__heading">
                <h2>
                  <p>{{ block.settings.quote }}</p>
                  <span class="quote-and-logos__author">
                    {{ block.settings.author }}
                  </span>
                </h2>
              </div>
            </div>
          {% endif %}
        {% endfor %}
      </div>

      <div class="quote-and-logos__subheading">
        <p>{{ section.settings.subheading }}</p>
      </div>

      <div class="quote-and-logos__grid">
        {% assign logo_index = 0 %}
        {% for block in section.blocks %}
          {% if block.type == 'logo' %}
            <div
              class="quote-and-logos__logo-item {% if logo_index == 0 %}active{% endif %}"
              data-index="{{ logo_index }}"
              {{ block.shopify_attributes }}
            >
              <div class="quote-and-logos__logo">
                {% if block.settings.logo != blank %}
                  <img
                    src="{{ block.settings.logo | image_url: width: 200 }}"
                    loading="lazy"
                    width="200"
                  >
                {% endif %}
              </div>
            </div>
            {% assign logo_index = logo_index | plus: 1 %}
          {% endif %}
        {% endfor %}
      </div>

    </div>
  </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function () {
  const slides = document.querySelectorAll('.quote-and-logos__quote-slide');
  const logos  = document.querySelectorAll('.quote-and-logos__logo-item');
  if (!slides.length || !logos.length) return;

  let currentIndex = 0;
  let interval;
  const delay = {{ section.settings.autoplay_speed | times: 1000 }};

  function show(index) {
    slides.forEach(s => s.classList.remove('active'));
    logos.forEach(l => l.classList.remove('active'));
    slides[index].classList.add('active');
    logos[index].classList.add('active');
    currentIndex = index;
  }

  function next() {
    show((currentIndex + 1) % slides.length);
  }

  {% if section.settings.autoplay %}
    interval = setInterval(next, delay);
  {% endif %}

  logos.forEach(logo => {
    logo.addEventListener('click', () => {
      clearInterval(interval);
      show(parseInt(logo.dataset.index));
      {% if section.settings.autoplay %}
        interval = setInterval(next, delay);
      {% endif %}
    });
  });
});
</script>

