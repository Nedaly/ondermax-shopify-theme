+/* RTL utility classes */
+html[dir='rtl'] body {
+  direction: rtl;
+}
+
+/* Utility for arrows/chevrons fix in RTL */
+.rtl-flip {
+  transform: scaleX(-1);
+}
+[dir='rtl'] .rtl-flip {
+  transform: scaleX(-1);
+}
+
+/* Utility for numeric fragments in RTL strings */
+.rtl-num {
+  direction: ltr;
+  unicode-bidi: isolate;
+}
