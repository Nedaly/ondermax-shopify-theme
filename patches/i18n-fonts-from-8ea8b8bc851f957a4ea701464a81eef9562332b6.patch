+/* Arabic font support */
+@font-face {
+  font-family: 'PlexArabic';
+  src: url('{{ "ibm-plex-sans-arabic-400.woff2" | asset_url }}') format('woff2');
+  font-weight: 400;
+  font-style: normal;
+  font-display: swap;
+  unicode-range:
+    U+0600-06FF, U+0750-077F, U+08A0-08FF, U+FB50-FDFF, U+FE70-FEFF, U+0020-007E;
+}
+@font-face {
+  font-family: 'PlexArabic';
+  src: url('{{ "ibm-plex-sans-arabic-600.woff2" | asset_url }}') format('woff2');
+  font-weight: 600;
+  font-style: normal;
+  font-display: swap;
+  unicode-range:
+    U+0600-06FF, U+0750-077F, U+08A0-08FF, U+FB50-FDFF, U+FE70-FEFF, U+0020-007E;
+}
+
+/* Arabic typography & micro-tweaks */
+html:lang(ar) body {
+  font-family:
+    'PlexArabic',
+    Cairo,
+    system-ui,
+    -apple-system,
+    'Segoe UI',
+    Roboto,
+    'Noto Sans Arabic',
+    sans-serif;
+  line-height: 1.75;
+  letter-spacing: 0;
+  font-feature-settings: 'kern';
+}
+html:lang(ar) h1,
+html:lang(ar) h2 {
+  font-weight: 600;
+}
+/* Buttons / CTAs a touch bolder for Arabic legibility */
+html:lang(ar) .btn,
+html:lang(ar) .button,
+html:lang(ar) .cta {
+  font-weight: 600;
+}
+/* Inputs & placeholders align properly in RTL */
+[dir='rtl'] input,
+[dir='rtl'] textarea,
+[dir='rtl'] select {
+  text-align: start;
+}
