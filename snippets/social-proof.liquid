<div class="social-proof">
  <div class="social-proof__content">
    {%- if section.settings.social_proof_text != blank -%}
      <p class="social-proof__text">
        {{ section.settings.social_proof_text }}
      </p>
    {%- endif -%}
    
    {%- if section.settings.show_ratings -%}
      <div class="social-proof__ratings">
        <div class="social-proof__stars">
          {%- for i in (1..5) -%}
            <span class="social-proof__star">★</span>
          {%- endfor -%}
        </div>
        {%- if section.settings.rating_text != blank -%}
          <span class="social-proof__rating-text">
            {{ section.settings.rating_text }}
          </span>
        {%- endif -%}
      </div>
    {%- endif -%}
    
    {%- if section.settings.show_testimonials -%}
      <div class="social-proof__testimonials">
        {%- if section.settings.testimonial_1 != blank -%}
          <div class="social-proof__testimonial">
            <p class="social-proof__testimonial-text">
              "{{ section.settings.testimonial_1 }}"
            </p>
            {%- if section.settings.testimonial_1_author != blank -%}
              <p class="social-proof__testimonial-author">
                — {{ section.settings.testimonial_1_author }}
              </p>
            {%- endif -%}
          </div>
        {%- endif -%}
        
        {%- if section.settings.testimonial_2 != blank -%}
          <div class="social-proof__testimonial">
            <p class="social-proof__testimonial-text">
              "{{ section.settings.testimonial_2 }}"
            </p>
            {%- if section.settings.testimonial_2_author != blank -%}
              <p class="social-proof__testimonial-author">
                — {{ section.settings.testimonial_2_author }}
              </p>
            {%- endif -%}
          </div>
        {%- endif -%}
      </div>
    {%- endif -%}
    
    {%- if section.settings.show_stats -%}
      <div class="social-proof__stats">
        {%- if section.settings.stat_1_number != blank -%}
          <div class="social-proof__stat">
            <span class="social-proof__stat-number">
              {{ section.settings.stat_1_number }}
            </span>
            {%- if section.settings.stat_1_label != blank -%}
              <span class="social-proof__stat-label">
                {{ section.settings.stat_1_label }}
              </span>
            {%- endif -%}
          </div>
        {%- endif -%}
        
        {%- if section.settings.stat_2_number != blank -%}
          <div class="social-proof__stat">
            <span class="social-proof__stat-number">
              {{ section.settings.stat_2_number }}
            </span>
            {%- if section.settings.stat_2_label != blank -%}
              <span class="social-proof__stat-label">
                {{ section.settings.stat_2_label }}
              </span>
            {%- endif -%}
          </div>
        {%- endif -%}
        
        {%- if section.settings.stat_3_number != blank -%}
          <div class="social-proof__stat">
            <span class="social-proof__stat-number">
              {{ section.settings.stat_3_number }}
            </span>
            {%- if section.settings.stat_3_label != blank -%}
              <span class="social-proof__stat-label">
                {{ section.settings.stat_3_label }}
              </span>
            {%- endif -%}
          </div>
        {%- endif -%}
      </div>
    {%- endif -%}
  </div>
</div>

{% schema %}
{
  "name": "Social Proof Settings",
  "settings": [
    {
      "type": "header",
      "content": "Social Proof Text"
    },
    {
      "type": "text",
      "id": "social_proof_text",
      "default": "Trusted by thousands of customers worldwide",
      "label": "Social proof text"
    },
    {
      "type": "header",
      "content": "Ratings"
    },
    {
      "type": "checkbox",
      "id": "show_ratings",
      "default": true,
      "label": "Show ratings"
    },
    {
      "type": "text",
      "id": "rating_text",
      "default": "4.9/5 based on 1,000+ reviews",
      "label": "Rating text"
    },
    {
      "type": "header",
      "content": "Testimonials"
    },
    {
      "type": "checkbox",
      "id": "show_testimonials",
      "default": true,
      "label": "Show testimonials"
    },
    {
      "type": "textarea",
      "id": "testimonial_1",
      "default": "This product changed my life! Amazing quality and fast shipping.",
      "label": "Testimonial 1"
    },
    {
      "type": "text",
      "id": "testimonial_1_author",
      "default": "Sarah M.",
      "label": "Testimonial 1 author"
    },
    {
      "type": "textarea",
      "id": "testimonial_2",
      "default": "Best purchase I've made this year. Highly recommend!",
      "label": "Testimonial 2"
    },
    {
      "type": "text",
      "id": "testimonial_2_author",
      "default": "John D.",
      "label": "Testimonial 2 author"
    },
    {
      "type": "header",
      "content": "Statistics"
    },
    {
      "type": "checkbox",
      "id": "show_stats",
      "default": true,
      "label": "Show statistics"
    },
    {
      "type": "text",
      "id": "stat_1_number",
      "default": "10,000+",
      "label": "Statistic 1 number"
    },
    {
      "type": "text",
      "id": "stat_1_label",
      "default": "Happy Customers",
      "label": "Statistic 1 label"
    },
    {
      "type": "text",
      "id": "stat_2_number",
      "default": "99%",
      "label": "Statistic 2 number"
    },
    {
      "type": "text",
      "id": "stat_2_label",
      "default": "Satisfaction Rate",
      "label": "Statistic 2 label"
    },
    {
      "type": "text",
      "id": "stat_3_number",
      "default": "24/7",
      "label": "Statistic 3 number"
    },
    {
      "type": "text",
      "id": "stat_3_label",
      "default": "Customer Support",
      "label": "Statistic 3 label"
    }
  ]
}
{% endschema %}
