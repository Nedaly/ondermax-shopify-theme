{% comment %}
  Meta tags for SEO and social sharing
{% endcomment %}

{%- if page_description -%}
  <meta name="description" content="{{ page_description | escape }}">
{%- endif -%}

{%- if shop.name -%}
  <meta property="og:site_name" content="{{ shop.name | escape }}">
{%- endif -%}

{%- if page_title -%}
  <meta property="og:title" content="{{ page_title | escape }}">
  <meta name="twitter:title" content="{{ page_title | escape }}">
{%- endif -%}

{%- if page_description -%}
  <meta property="og:description" content="{{ page_description | escape }}">
  <meta name="twitter:description" content="{{ page_description | escape }}">
{%- endif -%}

{%- if page_image -%}
  <meta property="og:image" content="http:{{ page_image | image_url: width: 1200, height: 630 }}">
  <meta property="og:image:secure_url" content="https:{{ page_image | image_url: width: 1200, height: 630 }}">
  <meta name="twitter:image" content="https:{{ page_image | image_url: width: 1200, height: 630 }}">
{%- endif -%}

<meta property="og:url" content="{{ canonical_url }}">
<meta property="og:type" content="website">
<meta name="twitter:card" content="summary_large_image">

{%- if settings.social_twitter_link != blank -%}
  <meta name="twitter:site" content="{{ settings.social_twitter_link | split: 'twitter.com/' | last | prepend: '@' }}">
{%- endif -%}

{%- if settings.social_facebook_link != blank -%}
  <meta property="article:publisher" content="{{ settings.social_facebook_link }}">
{%- endif -%}

{%- if template contains 'product' -%}
  <meta property="og:type" content="product">
  <meta property="product:price:amount" content="{{ product.price | money_without_currency | strip_html }}">
  <meta property="product:price:currency" content="{{ cart.currency.iso_code }}">
{%- endif -%}

{%- if template contains 'article' -%}
  <meta property="og:type" content="article">
  <meta property="article:published_time" content="{{ article.published_at | date: '%Y-%m-%d' }}">
{%- endif -%}
