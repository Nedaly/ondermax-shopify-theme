{%- comment -%}
  Sticky Cart for Mobile
  This will be added later as a floating cart button on mobile
{%- endcomment -%}

<div class="sticky-cart-mobile" style="display: none;">
  <a href="{{ routes.cart_url }}" class="sticky-cart-button">
    <span class="sticky-cart-icon">
      {% render 'icon-cart' %}
    </span>
    <span class="sticky-cart-count" data-cart-count="{{ cart.item_count }}">
      {{ cart.item_count }}
    </span>
  </a>
</div>

<style>
  .sticky-cart-mobile {
    position: fixed;
    bottom: 20px;
    right: 20px;
    z-index: 1000;
    display: none;
  }

  .sticky-cart-button {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 56px;
    height: 56px;
    background: linear-gradient(135deg, #1c8e8e 0%, #2d9cdb 100%);
    border-radius: 50%;
    box-shadow: 0 4px 12px rgba(28, 142, 142, 0.3);
    text-decoration: none;
    position: relative;
    transition: all 0.3s ease;
  }

  .sticky-cart-button:hover {
    transform: scale(1.1);
    box-shadow: 0 6px 16px rgba(28, 142, 142, 0.4);
  }

  .sticky-cart-icon {
    color: white;
    font-size: 20px;
  }

  .sticky-cart-count {
    position: absolute;
    top: -8px;
    right: -8px;
    background: #ff4444;
    color: white;
    font-size: 12px;
    font-weight: 600;
    padding: 2px 6px;
    border-radius: 10px;
    min-width: 18px;
    text-align: center;
  }

  @media (max-width: 749px) {
    .sticky-cart-mobile {
      display: block;
    }
  }
</style>
